<script>
const csrfToken = '<%= csrfToken %>';
const npmEnabled = <%= npm.enabled ? 'true' : 'false' %>;

// Status translations
const statusTexts = {
    running: '<i class="bi bi-check-circle"></i> <%= t("admin:npm.status.running") %>',
    configured: '<i class="bi bi-exclamation-circle"></i> <%= t("admin:npm.status.configured") %>',
    disabled: '<i class="bi bi-x-circle"></i> <%= t("admin:npm.status.disabled") %>',
    notFound: '<i class="bi bi-question-circle"></i> <%= t("admin:npm.status.notFound") %>'
};

// Fetch and update container status
async function updateContainerStatus() {
    const statusBadge = document.getElementById('statusBadge');
    const statusIcon = document.getElementById('statusIcon');
    const statusCard = document.getElementById('statusCard');
    const openPanelBtn = document.getElementById('openPanelBtn');
    const startBtn = document.getElementById('startBtn');
    const stopBtn = document.getElementById('stopBtn');
    const restartBtn = document.getElementById('restartBtn');

    try {
        const response = await fetch('/admin/settings/npm/status');
        const data = await response.json();

        if (data.running) {
            statusBadge.className = 'badge bg-success fs-6';
            statusBadge.innerHTML = statusTexts.running;
            statusIcon.className = 'bi bi-hdd-network fs-1 text-success opacity-50';
            statusCard.className = 'card border-success';
            openPanelBtn.style.display = 'inline-block';
            startBtn.disabled = true;
            stopBtn.disabled = false;
            restartBtn.disabled = false;
        } else if (data.exists) {
            statusBadge.className = 'badge bg-warning text-dark fs-6';
            statusBadge.innerHTML = statusTexts.configured;
            statusIcon.className = 'bi bi-hdd-network fs-1 text-warning opacity-50';
            statusCard.className = 'card border-warning';
            openPanelBtn.style.display = 'none';
            startBtn.disabled = false;
            stopBtn.disabled = true;
            restartBtn.disabled = true;
        } else if (!npmEnabled) {
            statusBadge.className = 'badge bg-secondary fs-6';
            statusBadge.innerHTML = statusTexts.disabled;
            statusIcon.className = 'bi bi-hdd-network fs-1 text-secondary opacity-50';
            statusCard.className = 'card border-secondary';
            openPanelBtn.style.display = 'none';
        } else {
            statusBadge.className = 'badge bg-secondary fs-6';
            statusBadge.innerHTML = statusTexts.notFound;
            statusIcon.className = 'bi bi-hdd-network fs-1 text-secondary opacity-50';
            statusCard.className = 'card border-secondary';
            openPanelBtn.style.display = 'none';
        }
    } catch (error) {
        statusBadge.className = 'badge bg-danger fs-6';
        statusBadge.innerHTML = '<i class="bi bi-x-circle"></i> Error';
    }
}

// Container control action
async function containerAction(action, btn) {
    const originalHtml = btn.innerHTML;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
    btn.disabled = true;

    try {
        const response = await fetch(`/admin/settings/npm/${action}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': csrfToken
            }
        });
        const data = await response.json();

        if (data.success) {
            // Wait a moment for container state to change
            setTimeout(updateContainerStatus, 1000);
        } else {
            alert(data.error || 'Action failed');
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }

    btn.innerHTML = originalHtml;
    btn.disabled = false;
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    updateContainerStatus();
    // Refresh status every 10 seconds
    setInterval(updateContainerStatus, 10000);
});

// Toggle settings visibility based on enable checkbox
document.getElementById('npm_enabled').addEventListener('change', function() {
    document.getElementById('npmSettings').classList.toggle('d-none', !this.checked);
});

// Container control buttons
document.getElementById('startBtn').addEventListener('click', function() {
    containerAction('start', this);
});

document.getElementById('stopBtn').addEventListener('click', function() {
    containerAction('stop', this);
});

document.getElementById('restartBtn').addEventListener('click', function() {
    containerAction('restart', this);
});

// Test connection button
document.getElementById('testConnectionBtn').addEventListener('click', async function() {
    const btn = this;
    const originalHtml = btn.innerHTML;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> <%= t("admin:npm.testing") %>';
    btn.disabled = true;

    try {
        const response = await fetch('/admin/settings/npm/test', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': csrfToken
            }
        });
        const data = await response.json();

        if (data.success) {
            btn.innerHTML = '<i class="bi bi-check-circle text-success"></i> ' + data.message;
            btn.classList.remove('btn-outline-primary');
            btn.classList.add('btn-outline-success');
        } else {
            btn.innerHTML = '<i class="bi bi-x-circle text-danger"></i> ' + data.error;
            btn.classList.remove('btn-outline-primary');
            btn.classList.add('btn-outline-danger');
        }
    } catch (error) {
        btn.innerHTML = '<i class="bi bi-x-circle text-danger"></i> Error';
        btn.classList.remove('btn-outline-primary');
        btn.classList.add('btn-outline-danger');
    }

    setTimeout(() => {
        btn.innerHTML = originalHtml;
        btn.disabled = false;
        btn.classList.remove('btn-outline-success', 'btn-outline-danger');
        btn.classList.add('btn-outline-primary');
    }, 3000);
});

// Recreate NPM container button
document.getElementById('recreateBtn').addEventListener('click', async function() {
    if (!confirm('<%= t("admin:npm.recreateConfirm") %>')) {
        return;
    }

    const btn = this;
    const originalHtml = btn.innerHTML;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> <%= t("admin:npm.recreating") %>';
    btn.disabled = true;

    try {
        const response = await fetch('/admin/settings/npm/recreate', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': csrfToken
            }
        });
        const data = await response.json();

        if (data.success) {
            btn.innerHTML = '<i class="bi bi-check-circle text-success"></i>';
            btn.classList.remove('btn-outline-danger');
            btn.classList.add('btn-outline-success');
            // Show alert with instructions
            alert(data.message || '<%= t("admin:npm.recreateSuccess") %>');
            // Refresh status
            setTimeout(updateContainerStatus, 2000);
        } else {
            btn.innerHTML = '<i class="bi bi-x-circle text-danger"></i> ' + data.error;
        }
    } catch (error) {
        btn.innerHTML = '<i class="bi bi-x-circle text-danger"></i> Error';
    }

    setTimeout(() => {
        btn.innerHTML = originalHtml;
        btn.disabled = false;
        btn.classList.remove('btn-outline-success');
        btn.classList.add('btn-outline-danger');
    }, 5000);
});

// Fetch and display NPM container logs
async function fetchLogs() {
    const logsContent = document.getElementById('logsContent');
    const refreshBtn = document.getElementById('refreshLogsBtn');

    if (!npmEnabled) {
        logsContent.innerHTML = '<span class="text-muted"><%= t("admin:npm.noLogs") %></span>';
        return;
    }

    try {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

        const response = await fetch('/admin/settings/npm/logs?lines=100');
        const data = await response.json();

        if (data.success && data.logs) {
            // Escape HTML and format logs
            const escapedLogs = data.logs
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;');
            logsContent.innerHTML = escapedLogs || '<span class="text-muted"><%= t("admin:npm.noLogs") %></span>';
            // Scroll to bottom
            logsContent.scrollTop = logsContent.scrollHeight;
        } else {
            logsContent.innerHTML = '<span class="text-warning"><%= t("admin:npm.logsNotRunning") %></span>';
        }
    } catch (error) {
        logsContent.innerHTML = '<span class="text-danger">Error: ' + error.message + '</span>';
    } finally {
        refreshBtn.disabled = false;
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> <%= t("admin:npm.refreshLogs") %>';
    }
}

// Refresh logs button
document.getElementById('refreshLogsBtn').addEventListener('click', fetchLogs);

// Fetch and display NPM operation logs (domain/SSL operations from dashboard)
async function fetchOperationLogs() {
    const logsContent = document.getElementById('operationLogsContent');
    const refreshBtn = document.getElementById('refreshOperationLogsBtn');

    if (!npmEnabled) {
        logsContent.innerHTML = '<span class="text-muted"><%= t("admin:npm.noOperationLogs") %></span>';
        return;
    }

    try {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

        const response = await fetch('/admin/settings/npm/operation-logs?lines=50');
        const data = await response.json();

        if (data.success && data.logs) {
            // Escape HTML and format logs
            const escapedLogs = data.logs
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;');
            logsContent.innerHTML = escapedLogs || '<span class="text-muted"><%= t("admin:npm.noOperationLogs") %></span>';
        } else {
            logsContent.innerHTML = '<span class="text-muted"><%= t("admin:npm.noOperationLogs") %></span>';
        }
    } catch (error) {
        logsContent.innerHTML = '<span class="text-danger">Error: ' + error.message + '</span>';
    } finally {
        refreshBtn.disabled = false;
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> <%= t("admin:npm.refreshLogs") %>';
    }
}

// Refresh operation logs button
document.getElementById('refreshOperationLogsBtn').addEventListener('click', fetchOperationLogs);

// Chevron animation is handled by CSS using aria-expanded attribute
// Bootstrap automatically updates aria-expanded on the toggle element

// Load logs when sections are expanded (if NPM is enabled)
if (npmEnabled) {
    // Fetch operation logs when its section is expanded
    document.getElementById('operationLogsBody').addEventListener('shown.bs.collapse', fetchOperationLogs);
    // Fetch container logs when its section is expanded
    document.getElementById('containerLogsBody').addEventListener('shown.bs.collapse', fetchLogs);
}

// Configure Dashboard Domain button (for manual configuration)
const configureDashboardDomainBtn = document.getElementById('configureDashboardDomainBtn');
if (configureDashboardDomainBtn) {
    configureDashboardDomainBtn.addEventListener('click', async function() {
        const domainInput = document.getElementById('dashboardDomainInput');
        const sslCheckbox = document.getElementById('dashboardDomainSsl');
        const domain = domainInput.value.trim();

        // Validate domain format
        if (!domain || !/^[a-zA-Z0-9][a-zA-Z0-9.-]*\.[a-zA-Z]{2,}$/.test(domain)) {
            alert('<%= t("admin:npm.dashboardDomainInvalid") %>');
            domainInput.focus();
            return;
        }

        const btn = this;
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> <%= t("admin:npm.configuring") %>';
        btn.disabled = true;
        domainInput.disabled = true;

        try {
            const response = await fetch('/admin/settings/npm/dashboard-domain', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': csrfToken
                },
                body: JSON.stringify({
                    domain: domain,
                    ssl: sslCheckbox.checked
                })
            });
            const data = await response.json();

            if (data.success) {
                // Reload page to show success state
                window.location.reload();
            } else {
                alert(data.error || '<%= t("admin:npm.dashboardDomainError") %>');
                btn.innerHTML = originalHtml;
                btn.disabled = false;
                domainInput.disabled = false;
            }
        } catch (error) {
            alert('<%= t("admin:npm.dashboardDomainError") %>: ' + error.message);
            btn.innerHTML = originalHtml;
            btn.disabled = false;
            domainInput.disabled = false;
        }
    });
}

// Remove Dashboard Domain button
const removeDashboardDomainBtn = document.getElementById('removeDashboardDomainBtn');
if (removeDashboardDomainBtn) {
    removeDashboardDomainBtn.addEventListener('click', async function() {
        if (!confirm('<%= t("admin:npm.dashboardDomainConfirmRemove") %>')) {
            return;
        }

        const btn = this;
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
        btn.disabled = true;

        try {
            const response = await fetch('/admin/settings/npm/dashboard-domain', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': csrfToken
                }
            });
            const data = await response.json();

            if (data.success) {
                // Reload page to show input form
                window.location.reload();
            } else {
                alert(data.error || '<%= t("admin:npm.dashboardDomainError") %>');
                btn.innerHTML = originalHtml;
                btn.disabled = false;
            }
        } catch (error) {
            alert('<%= t("admin:npm.dashboardDomainError") %>: ' + error.message);
            btn.innerHTML = originalHtml;
            btn.disabled = false;
        }
    });
