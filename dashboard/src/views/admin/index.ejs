<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Admin</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-shield-lock"></i> Admin-Bereich</h1>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50">Benutzer</h6>
                        <h2 class="mb-0"><%= stats.users %></h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="/admin/users" class="text-white text-decoration-none">
                    Verwalten <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50">Admins</h6>
                        <h2 class="mb-0"><%= stats.admins %></h2>
                    </div>
                    <i class="bi bi-person-badge fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50">Projekte gesamt</h6>
                        <h2 class="mb-0"><%= stats.projects %></h2>
                    </div>
                    <i class="bi bi-folder fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="/admin/projects" class="text-white text-decoration-none">
                    Alle anzeigen <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <% if (stats.pending > 0) { %>
    <div class="col-md-4">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-dark opacity-75">Ausstehende Registrierungen</h6>
                        <h2 class="mb-0"><%= stats.pending %></h2>
                    </div>
                    <i class="bi bi-person-exclamation fs-1 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="/admin/pending" class="text-dark text-decoration-none">
                    Prüfen <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <% } %>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-people"></i> User-Verwaltung
            </div>
            <div class="card-body">
                <p class="text-muted">Erstellen, bearbeiten und löschen Sie Benutzerkonten.</p>
                <a href="/admin/users" class="btn btn-primary">
                    <i class="bi bi-people"></i> User verwalten
                </a>
                <a href="/admin/users/create" class="btn btn-outline-success">
                    <i class="bi bi-person-plus"></i> Neuer User
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-folder"></i> Projekt-Übersicht
            </div>
            <div class="card-body">
                <p class="text-muted">Sehen Sie alle Projekte aller Benutzer ein.</p>
                <a href="/admin/projects" class="btn btn-primary">
                    <i class="bi bi-folder"></i> Alle Projekte
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-file-text"></i> System-Logs
            </div>
            <div class="card-body">
                <p class="text-muted">Application-Logs des Dashboards einsehen und filtern.</p>
                <a href="/admin/logs" class="btn btn-primary">
                    <i class="bi bi-file-text"></i> Logs anzeigen
                </a>
                <a href="/admin/logs?type=error" class="btn btn-outline-danger">
                    <i class="bi bi-exclamation-triangle"></i> Nur Fehler
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-rocket-takeoff"></i> Deployment-Historie
            </div>
            <div class="card-body">
                <p class="text-muted">Alle Deployments aller Benutzer überwachen.</p>
                <a href="/admin/deployments" class="btn btn-primary">
                    <i class="bi bi-rocket-takeoff"></i> Deployments
                </a>
                <a href="/admin/deployments?status=failed" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Fehlgeschlagene
                </a>
            </div>
        </div>
    </div>
</div>
