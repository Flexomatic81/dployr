<%- include('../partials/pageHeader', {
    title: t('admin:users.title'),
    titleIcon: 'bi-people',
    backLink: { href: '/admin', label: t('common:nav.admin') },
    primaryAction: { href: '/admin/users/create', label: t('admin:users.newUser'), icon: 'bi-person-plus' }
}) %>

<div class="d-table-shell">
    <%- include('../components/tableShell', {
        title: t('admin:users.title'),
        titleIcon: 'bi-people'
    }) %>
    <div class="d-table-shell-body">
        <% if (users.length === 0) { %>
            <%- include('../components/emptyState', {
                title: t('admin:users.noUsers'),
                icon: 'bi-people',
                primaryAction: { href: '/admin/users/create', label: t('admin:users.newUser'), icon: 'bi-person-plus' },
                compact: true
            }) %>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th><%= t('admin:users.columns.username') %></th>
                            <th><%= t('admin:users.columns.systemUsername') %></th>
                            <th><%= t('admin:users.columns.role') %></th>
                            <th><%= t('common:nav.projects') %></th>
                            <th><%= t('admin:users.columns.created') %></th>
                            <th class="text-end"><%= t('admin:users.columns.actions') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u => { %>
                            <tr>
                                <td>
                                    <i class="bi bi-person me-1"></i>
                                    <span class="fw-medium"><%= u.username %></span>
                                </td>
                                <td><code><%= u.system_username %></code></td>
                                <td>
                                    <% if (u.is_admin) { %>
                                        <span class="badge bg-danger-subtle"><%= t('common:roles.admin') %></span>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= t('common:roles.user') %></span>
                                    <% } %>
                                    <% if (!u.approved) { %>
                                        <span class="badge bg-warning-subtle"><%= t('common:status.pending') %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-info-subtle"><%= u.projectCount %></span>
                                </td>
                                <td class="text-muted"><%= new Date(u.created_at).toLocaleDateString(currentLanguage === 'de' ? 'de-DE' : 'en-US') %></td>
                                <td class="text-end">
                                    <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary btn-icon" title="<%= t('common:buttons.edit') %>">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-warning btn-icon btn-reset-password" title="<%= t('admin:editUser.resetPassword') %>"
                                            data-user-id="<%= u.id %>" data-username="<%= u.username %>">
                                        <i class="bi bi-key"></i>
                                    </button>
                                    <% if (u.id !== user.id) { %>
                                        <form action="/admin/users/<%= u.id %>?_method=DELETE" method="POST" class="d-inline"
                                              data-confirm="<%= t('admin:delete.confirmUser', { username: u.username }) %>">
                                            <%- csrfInput %>
                                            <button type="submit" class="btn btn-sm btn-outline-danger btn-icon" title="<%= t('common:buttons.delete') %>">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-key me-2"></i><%= t('admin:editUser.resetPassword') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="resetPasswordForm" method="POST">
                <%- csrfInput %>
                <input type="hidden" name="_method" value="PUT">
                <div class="modal-body">
                    <p><%= t('admin:editUser.newPassword') %> <strong id="resetUsername"></strong>:</p>
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" id="newPassword" name="password" required minlength="6">
                            <button class="btn btn-outline-primary" type="button" id="btnGeneratePassword">
                                <i class="bi bi-shuffle"></i>
                            </button>
                            <button class="btn btn-outline-secondary" type="button" id="btnCopyPassword">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                        <div class="form-text"><%= t('common:validation.minLength', { min: 6 }) %></div>
                    </div>
                    <input type="hidden" id="resetUsernameField" name="username">
                    <input type="hidden" id="resetSystemUsername" name="system_username">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common:buttons.cancel') %></button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-key"></i> <%= t('admin:editUser.resetPassword') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script nonce="<%= cspNonce %>">
document.addEventListener('DOMContentLoaded', function() {
    const usersData = <%- JSON.stringify(users.map(u => ({ id: u.id, username: u.username, system_username: u.system_username }))) %>;

    // Generate random password
    function generateNewPassword() {
        const chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%&*';
        let password = '';
        for (let i = 0; i < 16; i++) {
            password += chars.charAt(Math.floor(Math.random() * chars.length));
        }
        document.getElementById('newPassword').value = password;
    }

    // Reset password button click - open modal
    document.querySelectorAll('.btn-reset-password').forEach(function(btn) {
        btn.addEventListener('click', function() {
            const userId = parseInt(this.dataset.userId);
            const username = this.dataset.username;
            const user = usersData.find(u => u.id === userId);
            if (!user) return;

            document.getElementById('resetUsername').textContent = username;
            document.getElementById('resetUsernameField').value = user.username;
            document.getElementById('resetSystemUsername').value = user.system_username;
            document.getElementById('resetPasswordForm').action = '/admin/users/' + userId + '?_method=PUT';

            generateNewPassword();

            const modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            modal.show();
        });
    });

    // Generate password button
    document.getElementById('btnGeneratePassword').addEventListener('click', generateNewPassword);

    // Copy password button
    document.getElementById('btnCopyPassword').addEventListener('click', function() {
        const password = document.getElementById('newPassword').value;
        navigator.clipboard.writeText(password).then(() => {
            const icon = this.querySelector('i');
            icon.className = 'bi bi-check';
            setTimeout(() => { icon.className = 'bi bi-clipboard'; }, 2000);
        });
    });

    // Confirm dialogs for delete forms
    document.querySelectorAll('form[data-confirm]').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            if (!confirm(this.dataset.confirm)) {
                e.preventDefault();
            }
        });
    });
});
</script>
