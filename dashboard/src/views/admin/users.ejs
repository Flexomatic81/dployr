<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard"><%= t('common:nav.dashboard') %></a></li>
        <li class="breadcrumb-item"><a href="/admin"><%= t('common:nav.admin') %></a></li>
        <li class="breadcrumb-item active"><%= t('admin:users.title') %></li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> <%= t('admin:users.title') %></h1>
    <a href="/admin/users/create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> <%= t('admin:users.newUser') %>
    </a>
</div>

<div class="card">
    <div class="card-body">
        <% if (users.length === 0) { %>
            <p class="text-muted text-center my-4"><%= t('admin:users.noUsers') %></p>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><%= t('admin:users.columns.username') %></th>
                            <th><%= t('admin:users.columns.systemUsername') %></th>
                            <th><%= t('admin:users.columns.role') %></th>
                            <th><%= t('common:nav.projects') %></th>
                            <th><%= t('admin:users.columns.created') %></th>
                            <th><%= t('admin:users.columns.actions') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u => { %>
                            <tr>
                                <td>
                                    <i class="bi bi-person"></i>
                                    <%= u.username %>
                                </td>
                                <td><code><%= u.system_username %></code></td>
                                <td>
                                    <% if (u.is_admin) { %>
                                        <span class="badge bg-danger"><%= t('common:roles.admin') %></span>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= t('common:roles.user') %></span>
                                    <% } %>
                                    <% if (!u.approved) { %>
                                        <span class="badge bg-warning text-dark"><%= t('common:status.pending') %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-info"><%= u.projectCount %></span>
                                </td>
                                <td><%= new Date(u.created_at).toLocaleDateString(currentLanguage === 'de' ? 'de-DE' : 'en-US') %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/users/<%= u.id %>/edit" class="btn btn-outline-primary" title="<%= t('common:buttons.edit') %>">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-warning" title="<%= t('admin:editUser.resetPassword') %>"
                                                onclick="resetPassword(<%= u.id %>, '<%= u.username %>')">
                                            <i class="bi bi-key"></i>
                                        </button>
                                        <% if (u.id !== user.id) { %>
                                            <form action="/admin/users/<%= u.id %>?_method=DELETE" method="POST" class="d-inline"
                                                  onsubmit="return confirm('<%= t('admin:delete.confirmUser', { username: u.username }) %>')">
                                                <button type="submit" class="btn btn-outline-danger" title="<%= t('common:buttons.delete') %>">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-key"></i> <%= t('admin:editUser.resetPassword') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="resetPasswordForm" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="modal-body">
                    <p><%= t('admin:editUser.newPassword') %> <strong id="resetUsername"></strong>:</p>
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" id="newPassword" name="password" required minlength="6">
                            <button class="btn btn-outline-primary" type="button" onclick="generateNewPassword()">
                                <i class="bi bi-shuffle"></i>
                            </button>
                            <button class="btn btn-outline-secondary" type="button" onclick="copyPassword()">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                        <div class="form-text"><%= t('common:validation.minLength', { min: 6 }) %></div>
                    </div>
                    <input type="hidden" id="resetUsernameField" name="username">
                    <input type="hidden" id="resetSystemUsername" name="system_username">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common:buttons.cancel') %></button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-key"></i> <%= t('admin:editUser.resetPassword') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
const usersData = <%- JSON.stringify(users.map(u => ({ id: u.id, username: u.username, system_username: u.system_username }))) %>;

function resetPassword(userId, username) {
    const user = usersData.find(u => u.id === userId);
    if (!user) return;

    document.getElementById('resetUsername').textContent = username;
    document.getElementById('resetUsernameField').value = user.username;
    document.getElementById('resetSystemUsername').value = user.system_username;
    document.getElementById('resetPasswordForm').action = '/admin/users/' + userId + '?_method=PUT';

    generateNewPassword();

    const modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
    modal.show();
}

function generateNewPassword() {
    const chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%&*';
    let password = '';
    for (let i = 0; i < 16; i++) {
        password += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    document.getElementById('newPassword').value = password;
}

function copyPassword() {
    const password = document.getElementById('newPassword').value;
    navigator.clipboard.writeText(password).then(() => {
        const btn = event.target.closest('button');
        const icon = btn.querySelector('i');
        icon.className = 'bi bi-check';
        setTimeout(() => { icon.className = 'bi bi-clipboard'; }, 2000);
    });
}
</script>
