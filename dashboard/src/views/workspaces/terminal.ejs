<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terminal - <%= workspace.project_name %> | dployr</title>
    <!-- xterm.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/xterm@5.3.0/css/xterm.css">
    <script src="https://cdn.jsdelivr.net/npm/xterm@5.3.0/lib/xterm.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xterm-addon-fit@0.8.0/lib/xterm-addon-fit.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xterm-addon-web-links@0.9.0/lib/xterm-addon-web-links.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #1e1e1e;
        }
        #header {
            height: 50px;
            background: #1e1e1e;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            border-bottom: 1px solid #333;
        }
        #header h1 {
            font-size: 16px;
            font-weight: 500;
            margin: 0;
        }
        #header .status {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        #header .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #666;
        }
        #header .status-dot.connected {
            background: #4ec9b0;
        }
        #header .status-dot.connecting {
            background: #dcdcaa;
            animation: pulse 1s infinite;
        }
        #header .status-dot.error {
            background: #f44747;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        #header .actions {
            display: flex;
            gap: 10px;
        }
        #header button {
            background: #0e639c;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 13px;
        }
        #header button:hover {
            background: #1177bb;
        }
        #header .close-btn {
            background: #d13438;
        }
        #header .close-btn:hover {
            background: #e13438;
        }
        #terminal-container {
            width: 100%;
            height: calc(100% - 50px);
            padding: 10px;
            background: #1e1e1e;
        }
        #terminal {
            width: 100%;
            height: 100%;
        }
        .xterm {
            height: 100%;
        }
        /* Custom xterm styles */
        .xterm-viewport::-webkit-scrollbar {
            width: 10px;
        }
        .xterm-viewport::-webkit-scrollbar-track {
            background: #1e1e1e;
        }
        .xterm-viewport::-webkit-scrollbar-thumb {
            background: #424242;
            border-radius: 5px;
        }
        .xterm-viewport::-webkit-scrollbar-thumb:hover {
            background: #4f4f4f;
        }

        /* Sync Modal */
        .sync-modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }
        .sync-modal-overlay.visible {
            display: flex;
        }
        .sync-modal {
            background: #252526;
            border: 1px solid #3c3c3c;
            border-radius: 8px;
            padding: 30px 40px;
            min-width: 350px;
            max-width: 450px;
            text-align: center;
            color: #fff;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }
        .sync-modal h3 {
            margin: 0 0 20px 0;
            font-size: 18px;
            font-weight: 500;
        }
        .sync-modal .sync-spinner {
            border: 4px solid #3c3c3c;
            border-top: 4px solid #4ec9b0;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .sync-modal .sync-steps {
            text-align: left;
            margin: 20px 0;
            font-size: 13px;
        }
        .sync-modal .sync-step {
            padding: 8px 0;
            color: #6a6a6a;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .sync-modal .sync-step.active {
            color: #fff;
        }
        .sync-modal .sync-step.done {
            color: #4ec9b0;
        }
        .sync-modal .sync-step.error {
            color: #f44747;
        }
        .sync-modal .sync-step-icon {
            width: 20px;
            text-align: center;
        }
        .sync-modal .sync-result {
            display: none;
            margin-top: 20px;
            padding: 15px;
            border-radius: 6px;
            font-size: 14px;
        }
        .sync-modal .sync-result.success {
            display: block;
            background: rgba(78, 201, 176, 0.1);
            border: 1px solid #4ec9b0;
            color: #4ec9b0;
        }
        .sync-modal .sync-result.error {
            display: block;
            background: rgba(244, 71, 71, 0.1);
            border: 1px solid #f44747;
            color: #f44747;
        }
        .sync-modal .sync-close-btn {
            display: none;
            margin-top: 20px;
            background: #0e639c;
            color: #fff;
            border: none;
            padding: 10px 30px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        .sync-modal .sync-close-btn:hover {
            background: #1177bb;
        }
        .sync-modal .sync-close-btn.visible {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div id="header">
        <div class="status">
            <span class="status-dot" id="statusDot"></span>
            <h1>
                <span style="color: #4ec9b0;">$</span>
                <%= workspace.project_name %> - Terminal
            </h1>
        </div>
        <div class="actions">
            <button onclick="syncToProject(this)">
                ↑ <%= t('workspaces:actions.syncToProject') %>
            </button>
            <button onclick="window.location.href='/workspaces/<%= workspace.project_name %>/ide'">
                IDE
            </button>
            <button onclick="window.location.href='/workspaces/<%= workspace.project_name %>'">
                <%= t('workspaces:actions.settings') %>
            </button>
            <button class="close-btn" onclick="closeTerminal()">
                <%= t('common:buttons.close') %>
            </button>
        </div>
    </div>

    <div id="terminal-container">
        <div id="terminal"></div>
    </div>

    <!-- Sync Modal -->
    <div class="sync-modal-overlay" id="syncModal">
        <div class="sync-modal">
            <h3><%= t('workspaces:sync.modalTitle') %></h3>
            <div class="sync-spinner" id="syncSpinner"></div>
            <div class="sync-steps">
                <div class="sync-step" id="step1">
                    <span class="sync-step-icon">○</span>
                    <span><%= t('workspaces:sync.step1') %></span>
                </div>
                <div class="sync-step" id="step2">
                    <span class="sync-step-icon">○</span>
                    <span><%= t('workspaces:sync.step2') %></span>
                </div>
                <div class="sync-step" id="step3">
                    <span class="sync-step-icon">○</span>
                    <span><%= t('workspaces:sync.step3') %></span>
                </div>
            </div>
            <div class="sync-result" id="syncResult"></div>
            <button class="sync-close-btn" id="syncCloseBtn" onclick="closeSyncModal()">
                <%= t('common:buttons.close') %>
            </button>
        </div>
    </div>

    <script>
        let socket = null;
        let terminal = null;
        let fitAddon = null;
        let activityInterval = null;
        let reconnectAttempts = 0;
        const maxReconnectAttempts = 5;

        // Initialize terminal
        function initTerminal() {
            terminal = new Terminal({
                cursorBlink: true,
                cursorStyle: 'block',
                cursorInactiveStyle: 'outline',
                fontSize: 14,
                fontFamily: '"Cascadia Code", "Fira Code", Menlo, Monaco, "Courier New", monospace',
                scrollback: 10000,
                theme: {
                    background: '#1e1e1e',
                    foreground: '#d4d4d4',
                    cursor: '#ffffff',
                    cursorAccent: '#1e1e1e',
                    selectionBackground: '#264f78',
                    black: '#1e1e1e',
                    red: '#f44747',
                    green: '#4ec9b0',
                    yellow: '#dcdcaa',
                    blue: '#569cd6',
                    magenta: '#c586c0',
                    cyan: '#9cdcfe',
                    white: '#d4d4d4',
                    brightBlack: '#808080',
                    brightRed: '#f44747',
                    brightGreen: '#4ec9b0',
                    brightYellow: '#dcdcaa',
                    brightBlue: '#569cd6',
                    brightMagenta: '#c586c0',
                    brightCyan: '#9cdcfe',
                    brightWhite: '#ffffff'
                },
                allowProposedApi: true
            });

            // Add fit addon for auto-sizing
            fitAddon = new FitAddon.FitAddon();
            terminal.loadAddon(fitAddon);

            // Add web links addon for clickable URLs
            const webLinksAddon = new WebLinksAddon.WebLinksAddon();
            terminal.loadAddon(webLinksAddon);

            // Open terminal in container
            const terminalContainer = document.getElementById('terminal');
            terminal.open(terminalContainer);

            // Fit to container
            fitAddon.fit();

            // Handle window resize
            window.addEventListener('resize', () => {
                fitAddon.fit();
                sendResize();
            });

            // Handle terminal input
            terminal.onData((data) => {
                if (socket && socket.readyState === WebSocket.OPEN) {
                    socket.send(JSON.stringify({ type: 'input', data: data }));
                }
            });

            // Ensure focus on click
            document.getElementById('terminal-container').addEventListener('click', () => {
                terminal.focus();
            });

            // Connect to WebSocket
            connectWebSocket();
        }

        // Connect to WebSocket
        function connectWebSocket() {
            setStatus('connecting');

            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.host}/terminal-ws/<%= workspace.project_name %>`;

            socket = new WebSocket(wsUrl);

            socket.onopen = () => {
                console.log('Terminal WebSocket connected');
                reconnectAttempts = 0;
            };

            socket.onmessage = (event) => {
                try {
                    const msg = JSON.parse(event.data);

                    switch (msg.type) {
                        case 'ready':
                            setStatus('connected');
                            // Ensure terminal is focused and cursor is visible
                            setTimeout(() => {
                                terminal.focus();
                                fitAddon.fit();
                                sendResize();
                            }, 100);
                            break;

                        case 'output':
                            terminal.write(msg.data);
                            break;

                        case 'exit':
                            setStatus('error');
                            terminal.write('\r\n\x1b[31mTerminal session ended.\x1b[0m\r\n');
                            break;

                        case 'error':
                            setStatus('error');
                            terminal.write(`\r\n\x1b[31mError: ${msg.message}\x1b[0m\r\n`);
                            break;
                    }
                } catch (e) {
                    console.error('Failed to parse message:', e);
                }
            };

            socket.onclose = () => {
                console.log('Terminal WebSocket closed');
                setStatus('error');

                // Try to reconnect
                if (reconnectAttempts < maxReconnectAttempts) {
                    reconnectAttempts++;
                    terminal.write(`\r\n\x1b[33mConnection lost. Reconnecting (${reconnectAttempts}/${maxReconnectAttempts})...\x1b[0m\r\n`);
                    setTimeout(connectWebSocket, 2000);
                } else {
                    terminal.write('\r\n\x1b[31mConnection lost. Please refresh the page.\x1b[0m\r\n');
                }
            };

            socket.onerror = (error) => {
                console.error('Terminal WebSocket error:', error);
                setStatus('error');
            };
        }

        // Send resize event
        function sendResize() {
            if (socket && socket.readyState === WebSocket.OPEN && terminal) {
                socket.send(JSON.stringify({
                    type: 'resize',
                    cols: terminal.cols,
                    rows: terminal.rows
                }));
            }
        }

        // Set connection status
        function setStatus(status) {
            const dot = document.getElementById('statusDot');
            dot.className = 'status-dot ' + status;
        }

        // Send activity heartbeat
        async function sendActivity() {
            try {
                await fetch('/workspaces/<%= workspace.project_name %>/activity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    }
                });
            } catch (error) {
                console.error('Failed to send activity:', error);
            }
        }

        // Sync Modal Functions
        function showSyncModal() {
            document.getElementById('syncModal').classList.add('visible');
            document.getElementById('syncSpinner').style.display = 'block';
            document.getElementById('syncResult').className = 'sync-result';
            document.getElementById('syncResult').textContent = '';
            document.getElementById('syncCloseBtn').classList.remove('visible');

            ['step1', 'step2', 'step3'].forEach(id => {
                const step = document.getElementById(id);
                step.className = 'sync-step';
                step.querySelector('.sync-step-icon').textContent = '○';
            });
        }

        function updateSyncStep(stepNum, status) {
            const step = document.getElementById('step' + stepNum);
            const icon = step.querySelector('.sync-step-icon');

            if (status === 'active') {
                step.className = 'sync-step active';
                icon.textContent = '◐';
            } else if (status === 'done') {
                step.className = 'sync-step done';
                icon.textContent = '✓';
            } else if (status === 'error') {
                step.className = 'sync-step error';
                icon.textContent = '✗';
            }
        }

        function showSyncResult(success, message) {
            document.getElementById('syncSpinner').style.display = 'none';
            const result = document.getElementById('syncResult');
            result.className = 'sync-result ' + (success ? 'success' : 'error');
            result.textContent = message;
            document.getElementById('syncCloseBtn').classList.add('visible');
        }

        function closeSyncModal() {
            document.getElementById('syncModal').classList.remove('visible');
        }

        // Sync to project
        async function syncToProject(btn) {
            showSyncModal();

            updateSyncStep(1, 'active');
            await new Promise(r => setTimeout(r, 500));
            updateSyncStep(1, 'done');

            updateSyncStep(2, 'active');

            try {
                const response = await fetch('/workspaces/<%= workspace.project_name %>/sync/to-project', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    updateSyncStep(2, 'done');
                    updateSyncStep(3, 'active');
                    await new Promise(r => setTimeout(r, 300));
                    updateSyncStep(3, 'done');

                    let message = '<%= t("workspaces:messages.synced") %>';
                    if (data.actions && data.actions.includes('rebuild')) {
                        message = '<%= t("workspaces:messages.syncedRebuilt") %>';
                    } else if (data.actions && data.actions.includes('restart')) {
                        message = '<%= t("workspaces:messages.syncedRestarted") %>';
                    }
                    if (data.projectType) {
                        message += ' (' + data.projectType + ')';
                    }
                    showSyncResult(true, message);
                } else {
                    updateSyncStep(2, 'error');
                    showSyncResult(false, data.error || '<%= t("workspaces:errors.syncFailed") %>');
                }
            } catch (error) {
                updateSyncStep(2, 'error');
                showSyncResult(false, '<%= t("workspaces:errors.syncFailed") %>: ' + error.message);
            }
        }

        // Close terminal
        function closeTerminal() {
            if (socket) {
                socket.close();
            }
            window.close();
            // If window.close() fails
            setTimeout(() => {
                window.location.href = '/workspaces/<%= workspace.project_name %>';
            }, 100);
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', () => {
            initTerminal();

            // Start activity tracking
            activityInterval = setInterval(sendActivity, 30000);
            sendActivity();
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (activityInterval) {
                clearInterval(activityInterval);
            }
            if (socket) {
                socket.close();
            }
        });
    </script>
</body>
</html>
