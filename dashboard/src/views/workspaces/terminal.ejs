<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terminal - <%= workspace.project_name %> | dployr</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #1e1e1e;
        }
        #header {
            height: 50px;
            background: #1e1e1e;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            border-bottom: 1px solid #333;
        }
        #header h1 {
            font-size: 16px;
            font-weight: 500;
            margin: 0;
        }
        #header .actions {
            display: flex;
            gap: 10px;
        }
        #header button {
            background: #0e639c;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 13px;
        }
        #header button:hover {
            background: #1177bb;
        }
        #header .close-btn {
            background: #d13438;
        }
        #header .close-btn:hover {
            background: #e13438;
        }
        #terminal-frame {
            width: 100%;
            height: calc(100% - 50px);
            border: none;
            display: block;
        }
    </style>
</head>
<body>
    <div id="header">
        <h1>
            <span style="color: #4ec9b0;">$</span>
            <%= workspace.project_name %> - Terminal
        </h1>
        <div class="actions">
            <button onclick="window.location.href='/workspaces/<%= workspace.project_name %>/ide'">
                <i class="bi bi-code-square"></i> <%= t('workspaces:actions.openIDE') %>
            </button>
            <button onclick="window.location.href='/workspaces/<%= workspace.project_name %>'">
                <%= t('workspaces:actions.settings') %>
            </button>
            <button class="close-btn" onclick="closeTerminal()">
                <%= t('common:buttons.close') %>
            </button>
        </div>
    </div>

    <iframe
        id="terminal-frame"
        src="<%= terminalUrl %>"
    ></iframe>

    <script>
        let activityInterval;

        // Send activity heartbeat every 30 seconds
        async function sendActivity() {
            try {
                await fetch('/workspaces/<%= workspace.project_name %>/activity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    }
                });
            } catch (error) {
                console.error('Failed to send activity:', error);
            }
        }

        // Start activity tracking
        activityInterval = setInterval(sendActivity, 30000);

        // Send activity on load
        sendActivity();

        // Close terminal
        function closeTerminal() {
            window.close();
            // If window.close() fails (opened by user, not script)
            setTimeout(() => {
                window.location.href = '/workspaces/<%= workspace.project_name %>';
            }, 100);
        }

        // Auto-open terminal in VS Code when iframe loads
        const frame = document.getElementById('terminal-frame');
        frame.addEventListener('load', () => {
            // After iframe loads, send keyboard shortcut to open terminal
            // This uses postMessage to communicate with code-server
            setTimeout(() => {
                try {
                    // Try to focus the iframe and send Ctrl+` to open terminal
                    frame.focus();
                    frame.contentWindow.focus();
                } catch (e) {
                    // Cross-origin restrictions may prevent this
                    console.log('Could not auto-focus terminal');
                }
            }, 2000);
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            clearInterval(activityInterval);
        });
    </script>
</body>
</html>
