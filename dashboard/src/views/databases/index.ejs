<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-database"></i> <%= t('databases:title') %></h1>
    <a href="/databases/create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> <%= t('databases:newDatabase') %>
    </a>
</div>

<% if (databases.length === 0) { %>
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-database-x display-1 text-muted"></i>
            <h3 class="mt-3"><%= t('databases:noDatabases') %></h3>
            <p class="text-muted"><%= t('databases:noProjectsHint', { defaultValue: 'Erstelle deine erste Datenbank.' }) %></p>
            <a href="/databases/create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-lg"></i> <%= t('databases:createFirst') %>
            </a>
        </div>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><%= t('databases:info.database') %></th>
                            <th><%= t('databases:info.type') %></th>
                            <th><%= t('databases:info.user') %></th>
                            <th><%= t('databases:info.password') %></th>
                            <th><%= t('databases:info.host') %></th>
                            <th><%= t('common:labels.actions') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% databases.forEach(db => {
                            const isPostgres = db.type === 'postgresql';
                            const host = db.host || (isPostgres ? 'dployr-postgresql' : 'dployr-mariadb');
                            const port = db.port || (isPostgres ? 5432 : 3306);
                        %>
                            <tr>
                                <td>
                                    <i class="bi bi-database-fill <%= isPostgres ? 'text-info' : 'text-primary' %>"></i>
                                    <strong><%= db.database %></strong>
                                </td>
                                <td>
                                    <% if (isPostgres) { %>
                                        <span class="badge bg-info">
                                            <i class="bi bi-database-fill"></i> PostgreSQL
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-primary">
                                            <i class="bi bi-database"></i> MariaDB
                                        </span>
                                    <% } %>
                                </td>
                                <td><code><%= db.username %></code></td>
                                <td>
                                    <div class="input-group input-group-sm" style="width: 200px;">
                                        <input type="password" class="form-control form-control-sm"
                                               value="<%= db.password %>" readonly
                                               id="pw-<%= db.database.replace(/[^a-z0-9]/gi, '_') %>">
                                        <button class="btn btn-outline-secondary" type="button"
                                                onclick="togglePassword('pw-<%= db.database.replace(/[^a-z0-9]/gi, '_') %>')"
                                                title="<%= t('databases:credentials.showPassword') %>">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-secondary" type="button"
                                                onclick="copyPassword('pw-<%= db.database.replace(/[^a-z0-9]/gi, '_') %>')"
                                                title="<%= t('databases:credentials.copy') %>">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </div>
                                </td>
                                <td><code><%= host %>:<%= port %></code></td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal-<%= db.database.replace(/[^a-z0-9]/gi, '_') %>"
                                            title="<%= t('common:buttons.delete') %>">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal-<%= db.database.replace(/[^a-z0-9]/gi, '_') %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">
                                                <i class="bi bi-exclamation-triangle"></i> <%= t('databases:delete.title') %>
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p><%= t('common:confirm.delete', { defaultValue: 'Möchtest du die Datenbank wirklich löschen?' }) %> <strong>"<%= db.database %>"</strong></p>
                                            <div class="alert alert-danger">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                <strong><%= t('common:confirm.deleteWarning') %></strong>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common:buttons.cancel') %></button>
                                            <form action="/databases/<%= db.database %>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash"></i> <%= t('common:buttons.delete') %>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Connection Info -->
    <div class="row mt-4">
        <% if (hasMariaDB) { %>
        <div class="<%= hasPostgreSQL ? 'col-md-6' : 'col-12' %>">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-database"></i> MariaDB <%= t('databases:credentials.title', { defaultValue: 'Connection' }) %></h5>
                </div>
                <div class="card-body">
                    <pre class="code-block p-3 rounded mb-0"><code>DB_HOST=dployr-mariadb
DB_PORT=3306
DB_DATABASE=&lt;database&gt;
DB_USERNAME=&lt;username&gt;
DB_PASSWORD=&lt;password&gt;</code></pre>
                    <p class="text-muted mt-2 mb-0">
                        <i class="bi bi-tools"></i> Management: <a href="http://<%= serverIp %>:8080" target="_blank">phpMyAdmin</a>
                    </p>
                </div>
            </div>
        </div>
        <% } %>
        <% if (hasPostgreSQL) { %>
        <div class="<%= hasMariaDB ? 'col-md-6' : 'col-12' %>">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-database-fill"></i> PostgreSQL <%= t('databases:credentials.title', { defaultValue: 'Connection' }) %></h5>
                </div>
                <div class="card-body">
                    <pre class="code-block p-3 rounded mb-0"><code>DB_HOST=dployr-postgresql
DB_PORT=5432
DB_DATABASE=&lt;database&gt;
DB_USERNAME=&lt;username&gt;
DB_PASSWORD=&lt;password&gt;</code></pre>
                    <p class="text-muted mt-2 mb-0">
                        <i class="bi bi-tools"></i> Management: <a href="http://<%= serverIp %>:5050" target="_blank">pgAdmin</a>
                    </p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
<% } %>

<script>
function togglePassword(id) {
    const input = document.getElementById(id);
    input.type = input.type === 'password' ? 'text' : 'password';
}

function copyPassword(id) {
    const input = document.getElementById(id);
    input.type = 'text';
    input.select();
    document.execCommand('copy');
    input.type = 'password';

    // Feedback
    const btn = input.nextElementSibling.nextElementSibling;
    const originalIcon = btn.innerHTML;
    btn.innerHTML = '<i class="bi bi-check"></i>';
    setTimeout(() => btn.innerHTML = originalIcon, 1500);
}
</script>
