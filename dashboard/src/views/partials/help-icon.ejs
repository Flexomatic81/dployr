<%#
  Help Icon Component

  Usage:
  <%- include('partials/help-icon', { text: 'Help text here' }) %>

  For popovers with HTML:
  <%- include('partials/help-icon', { text: 'Short title', popover: '<p>Longer HTML text</p>' }) %>
-%>
<% if (typeof text !== 'undefined' && text) { %>
<i class="bi bi-question-circle text-muted ms-1"
   style="cursor: help; font-size: 0.85em;"
   <% if (typeof popover !== 'undefined' && popover) { %>
   data-bs-toggle="popover"
   data-bs-trigger="hover focus"
   data-bs-placement="top"
   data-bs-html="true"
   data-bs-title="<%= text %>"
   data-bs-content="<%= popover %>"
   <% } else { %>
   data-bs-toggle="tooltip"
   data-bs-placement="top"
   data-bs-title="<%= text %>"
   <% } %>
></i>
<% } %>
