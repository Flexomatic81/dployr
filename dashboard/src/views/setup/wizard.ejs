<div class="setup-card">
    <div class="setup-header text-center">
        <img src="/images/icon.png" alt="Dployr" class="setup-logo mb-2 rounded-3">
        <h1 class="mt-2 mb-0"><%= t('setup:title') %></h1>
        <p class="mb-0 opacity-75"><%= t('setup:subtitle') %></p>
    </div>

    <div class="card-body p-4">
        <!-- Step Indicator -->
        <div class="step-indicator" id="stepIndicator">
            <div class="step active" data-step="1">1</div>
            <div class="step" data-step="2">2</div>
            <div class="step" data-step="3">3</div>
            <div class="step" data-step="4">4</div>
            <div class="step" data-step="5">5</div>
        </div>

        <!-- Step 1: Language Selection -->
        <div class="setup-step" id="step1">
            <h4 class="mb-4"><i class="bi bi-globe"></i> <%= t('setup:languageSelect.title') %></h4>
            <p class="text-muted mb-4"><%= t('setup:languageSelect.description') %></p>

            <div class="row g-3 justify-content-center mb-4">
                <div class="col-auto">
                    <button type="button" class="btn btn-outline-primary btn-lg language-btn <%= currentLanguage === 'de' ? 'active' : '' %>" data-lang="de">
                        <span class="fs-2 me-2">ðŸ‡©ðŸ‡ª</span> Deutsch
                    </button>
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-outline-primary btn-lg language-btn <%= currentLanguage === 'en' ? 'active' : '' %>" data-lang="en">
                        <span class="fs-2 me-2">ðŸ‡¬ðŸ‡§</span> English
                    </button>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-primary" id="langNextBtn">
                    <%= t('setup:buttons.next') %> <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>

        <!-- Step 2: Server Configuration -->
        <div class="setup-step d-none" id="step2">
            <h4 class="mb-4"><i class="bi bi-gear"></i> <span class="step-title"><%= t('setup:config.title') %></span></h4>

            <form id="configForm">
                <div class="mb-3">
                    <label for="server_ip" class="form-label">
                        <span class="label-text"><%= t('setup:config.serverIp.label') %></span>
                        <%- include('../partials/help-icon', { text: t('setup:config.serverIp.help') }) %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-hdd-network"></i></span>
                        <input type="text" class="form-control" id="server_ip" name="server_ip"
                               value="<%= serverIp %>" required
                               pattern="[a-zA-Z0-9.\-]+"
                               placeholder="<%= t('setup:config.serverIp.placeholder') %>">
                    </div>
                    <div class="form-text server-ip-desc"><%= t('setup:config.serverIp.description') %></div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary go-to-step" data-step="1">
                        <i class="bi bi-arrow-left"></i> <span class="back-btn-text"><%= t('setup:buttons.back') %></span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <span class="next-btn-text"><%= t('setup:buttons.next') %></span> <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Step 3: Admin Account -->
        <div class="setup-step d-none" id="step3">
            <h4 class="mb-4"><i class="bi bi-person-badge"></i> <span class="admin-title"><%= t('setup:admin.title') %></span></h4>

            <form id="adminForm">
                <div class="mb-3">
                    <label for="admin_username" class="form-label">
                        <span class="admin-username-label"><%= t('setup:admin.username.label') %></span>
                        <%- include('../partials/help-icon', { text: t('setup:admin.username.help') }) %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" class="form-control" id="admin_username" name="admin_username"
                               required pattern="[a-z0-9_\-]+" placeholder="<%= t('setup:admin.username.placeholder') %>">
                    </div>
                    <div class="form-text admin-username-desc"><%= t('setup:admin.username.description') %></div>
                </div>

                <div class="mb-3">
                    <label for="admin_password" class="form-label admin-password-label"><%= t('setup:admin.password.label') %></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control" id="admin_password" name="admin_password"
                               required minlength="6" placeholder="<%= t('setup:admin.password.placeholder') %>">
                        <button class="btn btn-outline-secondary toggle-password" type="button" data-target="admin_password">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="admin_password_confirm" class="form-label admin-password-confirm-label"><%= t('setup:admin.passwordConfirm.label') %></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" id="admin_password_confirm"
                               required minlength="6" placeholder="<%= t('setup:admin.passwordConfirm.placeholder') %>">
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary go-to-step" data-step="2">
                        <i class="bi bi-arrow-left"></i> <span class="back-btn-text"><%= t('setup:buttons.back') %></span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <span class="next-btn-text"><%= t('setup:buttons.next') %></span> <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Step 4: Nginx Proxy Manager (Optional) -->
        <div class="setup-step d-none" id="step4">
            <h4 class="mb-4">
                <i class="bi bi-globe2"></i>
                <span class="npm-title"><%= t('setup:npm.title') %></span>
                <span class="badge bg-secondary"><%= t('setup:npm.optional') %></span>
            </h4>

            <p class="text-muted mb-4"><%= t('setup:npm.description') %></p>

            <div class="mb-4">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="npm_enabled" name="npm_enabled">
                    <label class="form-check-label" for="npm_enabled">
                        <strong><%= t('setup:npm.enable') %></strong>
                    </label>
                </div>
            </div>

            <div id="npmConfig" class="d-none">
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle"></i>
                    <%= t('setup:npm.info') %>
                </div>

                <div class="mb-3">
                    <label for="npm_email" class="form-label">
                        <%= t('setup:npm.email.label') %>
                        <%- include('../partials/help-icon', { text: t('setup:npm.email.help') }) %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control" id="npm_email" name="npm_email"
                               placeholder="admin@example.com">
                    </div>
                    <div class="form-text"><%= t('setup:npm.email.description') %></div>
                </div>

                <div class="mb-3">
                    <label for="npm_password" class="form-label">
                        <%= t('setup:npm.password.label') %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-key"></i></span>
                        <input type="password" class="form-control" id="npm_password" name="npm_password"
                               minlength="8" placeholder="<%= t('setup:npm.password.placeholder') %>">
                        <button class="btn btn-outline-secondary toggle-password" type="button" data-target="npm_password">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <div class="form-text"><%= t('setup:npm.password.description') %></div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-outline-secondary go-to-step" data-step="3">
                    <i class="bi bi-arrow-left"></i> <span class="back-btn-text"><%= t('setup:buttons.back') %></span>
                </button>
                <button type="button" class="btn btn-primary" id="npmNextBtn">
                    <span class="start-install-text"><%= t('setup:buttons.startInstall') %></span> <i class="bi bi-play-fill"></i>
                </button>
            </div>
        </div>

        <!-- Step 5: Installation Progress -->
        <div class="setup-step d-none" id="step5">
            <h4 class="mb-4"><i class="bi bi-download"></i> <span class="install-title"><%= t('setup:install.title') %></span></h4>

            <div id="progressSteps">
                <div class="progress-step pending" data-step="network">
                    <i class="bi bi-circle me-2"></i>
                    <span class="step-network"><%= t('setup:install.steps.network') %></span>
                </div>
                <div class="progress-step pending" data-step="wait_db">
                    <i class="bi bi-circle me-2"></i>
                    <span class="step-wait-db"><%= t('setup:install.steps.waitDb') %></span>
                </div>
                <div class="progress-step pending" data-step="dashboard_db">
                    <i class="bi bi-circle me-2"></i>
                    <span class="step-dashboard-db"><%= t('setup:install.steps.dashboardDb') %></span>
                </div>
                <div class="progress-step pending" data-step="admin">
                    <i class="bi bi-circle me-2"></i>
                    <span class="step-admin"><%= t('setup:install.steps.admin') %></span>
                </div>
            </div>

            <div id="setupResult" class="d-none mt-4">
                <div class="alert alert-success" id="successAlert">
                    <h5><i class="bi bi-check-circle"></i> <span class="success-title"><%= t('setup:install.success.title') %></span></h5>
                    <p class="mb-0 success-message"><%= t('setup:install.success.message') %></p>
                </div>
                <div class="alert alert-danger d-none" id="errorAlert">
                    <h5><i class="bi bi-exclamation-triangle"></i> <span class="error-title"><%= t('setup:install.error.title') %></span></h5>
                    <p class="mb-0" id="errorMessage"></p>
                </div>
            </div>

            <div id="completedActions" class="d-none mt-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="services-title"><%= t('setup:install.services.title') %></h6>
                        <ul class="mb-3">
                            <li><%= t('setup:install.services.mariadb') %></li>
                            <li><%= t('setup:install.services.phpmyadmin') %></li>
                            <li><%= t('setup:install.services.dashboard') %></li>
                        </ul>
                        <a href="/login" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> <span class="go-to-dashboard"><%= t('setup:install.goToDashboard') %></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let setupData = {
        language: '<%= currentLanguage %>'
    };

    // Translations for dynamic updates
    const translations = {
        de: {
            passwordMismatch: 'PasswÃ¶rter stimmen nicht Ã¼berein!'
        },
        en: {
            passwordMismatch: 'Passwords do not match!'
        }
    };

    function goToStep(step) {
        // Hide all steps
        document.querySelectorAll('.setup-step').forEach(el => el.classList.add('d-none'));

        // Show target step
        document.getElementById('step' + step).classList.remove('d-none');

        // Update step indicator
        document.querySelectorAll('.step').forEach(el => {
            const s = parseInt(el.dataset.step);
            el.classList.remove('active', 'done');
            if (s < step) el.classList.add('done');
            if (s === step) el.classList.add('active');
        });
    }

    // Language selection
    document.querySelectorAll('.language-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const lang = this.dataset.lang;
            setupData.language = lang;

            // Update UI
            document.querySelectorAll('.language-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');

            // Save language to session and reload page
            await fetch('/setup/language', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ language: lang })
            });

            // Reload page to apply translations
            window.location.reload();
        });
    });

    // Language next button
    document.getElementById('langNextBtn').addEventListener('click', function() {
        goToStep(2);
    });

    // Back buttons (go to specific step)
    document.querySelectorAll('.go-to-step').forEach(btn => {
        btn.addEventListener('click', function() {
            const step = parseInt(this.dataset.step);
            goToStep(step);
        });
    });

    // Toggle password visibility
    document.querySelectorAll('.toggle-password').forEach(btn => {
        btn.addEventListener('click', function() {
            const targetId = this.dataset.target;
            const input = document.getElementById(targetId);
            input.type = input.type === 'password' ? 'text' : 'password';
        });
    });

    // Step 2: Config Form
    document.getElementById('configForm').addEventListener('submit', function(e) {
        e.preventDefault();
        setupData.server_ip = document.getElementById('server_ip').value;
        // MySQL root password is now read from environment variables on the server
        goToStep(3);
    });

    // Step 3: Admin Form
    document.getElementById('adminForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const password = document.getElementById('admin_password').value;
        const confirm = document.getElementById('admin_password_confirm').value;

        if (password !== confirm) {
            alert(translations[setupData.language].passwordMismatch);
            return;
        }

        setupData.admin_username = document.getElementById('admin_username').value;
        setupData.admin_password = password;
        setupData.system_username = setupData.admin_username;

        goToStep(4); // Go to NPM step
    });

    // Step 4: NPM Toggle
    document.getElementById('npm_enabled').addEventListener('change', function() {
        const npmConfig = document.getElementById('npmConfig');
        if (this.checked) {
            npmConfig.classList.remove('d-none');
        } else {
            npmConfig.classList.add('d-none');
        }
    });

    // Step 4: NPM Next Button
    document.getElementById('npmNextBtn').addEventListener('click', function() {
        const npmEnabled = document.getElementById('npm_enabled').checked;

        if (npmEnabled) {
            const email = document.getElementById('npm_email').value;
            const password = document.getElementById('npm_password').value;

            if (!email || !password) {
                alert(translations[setupData.language].npmFieldsRequired || 'Please fill in email and password for NPM.');
                return;
            }

            if (password.length < 8) {
                alert(translations[setupData.language].npmPasswordLength || 'NPM password must be at least 8 characters.');
                return;
            }

            setupData.npm_enabled = true;
            setupData.npm_email = email;
            setupData.npm_password = password;
        } else {
            setupData.npm_enabled = false;
        }

        goToStep(5);
        runSetup();
    });

    async function runSetup() {
        // Determine which steps to show based on NPM config
        const baseSteps = ['network', 'wait_db', 'dashboard_db', 'admin'];
        let additionalSteps = [];

        if (setupData.npm_enabled) {
            additionalSteps.push('npm');
            // Check if it's a domain (not IP)
            const isIp = /^(\d{1,3}\.){3}\d{1,3}$/.test(setupData.server_ip) || setupData.server_ip === 'localhost';
            if (!isIp && setupData.server_ip) {
                additionalSteps.push('dashboard_domain');
            } else if (setupData.server_ip) {
                additionalSteps.push('dashboard_ip');
            }
        }

        // Add NPM steps to UI if enabled
        const progressStepsContainer = document.getElementById('progressSteps');
        additionalSteps.forEach(step => {
            const stepEl = document.createElement('div');
            stepEl.className = 'progress-step pending';
            stepEl.dataset.step = step;

            let stepText = '';
            if (step === 'npm') stepText = '<%= t("setup:install.steps.npm") %>';
            else if (step === 'dashboard_domain') stepText = '<%= t("setup:install.steps.dashboardDomain") %>';
            else if (step === 'dashboard_ip') stepText = '<%= t("setup:install.steps.dashboardIp") %>';

            stepEl.innerHTML = `<i class="bi bi-circle me-2"></i><span>${stepText}</span>`;
            progressStepsContainer.appendChild(stepEl);
        });

        const allSteps = [...baseSteps, ...additionalSteps];

        try {
            // Use fetch with SSE (Server-Sent Events) for real-time progress
            const response = await fetch('/setup/run', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(setupData)
            });

            // Check if response is SSE
            if (response.headers.get('Content-Type')?.includes('text/event-stream')) {
                await handleSSEResponse(response, allSteps);
            } else {
                // Fallback for non-SSE response (backwards compatibility)
                const result = await response.json();
                if (result.success) {
                    allSteps.forEach(step => updateStepStatus(step, 'done'));
                    showSetupSuccess(allSteps, result.dashboardUrl);
                } else {
                    throw new Error(result.error);
                }
            }
        } catch (error) {
            // Network error (e.g. connection lost during NPM/SSL setup)
            // Check if setup actually completed despite the error
            if (error.name === 'TypeError' && error.message.includes('fetch')) {
                await checkSetupStatusAfterError(allSteps);
            } else {
                showSetupError(error.message);
            }
        }
    }

    async function handleSSEResponse(response, allSteps) {
        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let buffer = '';

        while (true) {
            const { done, value } = await reader.read();
            if (done) break;

            buffer += decoder.decode(value, { stream: true });

            // Process complete events in buffer
            const lines = buffer.split('\n');
            buffer = lines.pop() || ''; // Keep incomplete line in buffer

            let eventType = '';
            let eventData = '';

            for (const line of lines) {
                if (line.startsWith('event: ')) {
                    eventType = line.slice(7).trim();
                } else if (line.startsWith('data: ')) {
                    eventData = line.slice(6).trim();
                } else if (line === '' && eventType && eventData) {
                    // Empty line = end of event
                    try {
                        const data = JSON.parse(eventData);
                        handleSetupEvent(eventType, data, allSteps);
                    } catch (e) {
                        console.error('Failed to parse SSE data:', e);
                    }
                    eventType = '';
                    eventData = '';
                }
            }
        }
    }

    function handleSetupEvent(type, data, allSteps) {
        if (type === 'step') {
            updateStepStatus(data.step, data.status);
        } else if (type === 'complete') {
            showSetupSuccess(allSteps, data.dashboardUrl);
        } else if (type === 'error') {
            showSetupError(data.error);
        }
    }

    /**
     * Check if setup completed despite network error
     * This handles the case where NPM takes over port 80/443 during setup
     */
    async function checkSetupStatusAfterError(steps) {
        // Wait a moment for any redirects/SSL to settle
        await new Promise(r => setTimeout(r, 2000));

        try {
            // Try to check setup status via port 3000 (always available)
            const port3000Url = window.location.protocol + '//' + window.location.hostname + ':3000/setup/status';
            const response = await fetch(port3000Url, { timeout: 5000 });
            const status = await response.json();

            if (status.setupComplete) {
                // Setup was successful! Determine the dashboard URL
                const serverIp = setupData.server_ip;
                const npmEnabled = setupData.npm_enabled;
                let dashboardUrl = '/login';

                if (npmEnabled && serverIp) {
                    // Check if it's a domain (not IP)
                    const isIp = /^(\d{1,3}\.){3}\d{1,3}$/.test(serverIp) || serverIp === 'localhost';
                    if (!isIp) {
                        dashboardUrl = `https://${serverIp}/login`;
                    } else {
                        dashboardUrl = `http://${serverIp}/login`;
                    }
                }

                showSetupSuccess(steps, dashboardUrl);
            } else {
                showSetupError('Setup connection lost. Please refresh and try again.');
            }
        } catch (statusError) {
            // Could not verify status - show error with manual redirect option
            showSetupErrorWithManualLink();
        }
    }

    function showSetupSuccess(steps, dashboardUrl) {
        // Mark all steps as done
        steps.forEach(step => updateStepStatus(step, 'done'));

        document.getElementById('setupResult').classList.remove('d-none');
        document.getElementById('successAlert').classList.remove('d-none');
        document.getElementById('errorAlert').classList.add('d-none');
        document.getElementById('completedActions').classList.remove('d-none');

        // Update dashboard link with the correct URL
        if (dashboardUrl) {
            const dashboardLink = document.querySelector('#completedActions a.btn-success');
            if (dashboardLink) {
                dashboardLink.href = dashboardUrl;
            }
        }
    }

    function showSetupError(message) {
        document.getElementById('setupResult').classList.remove('d-none');
        document.getElementById('successAlert').classList.add('d-none');
        document.getElementById('errorAlert').classList.remove('d-none');
        document.getElementById('errorMessage').textContent = message;
    }

    function showSetupErrorWithManualLink() {
        const serverIp = setupData.server_ip;
        const npmEnabled = setupData.npm_enabled;

        // Build possible dashboard URLs
        let urls = [];
        if (npmEnabled && serverIp) {
            const isIp = /^(\d{1,3}\.){3}\d{1,3}$/.test(serverIp) || serverIp === 'localhost';
            if (!isIp) {
                urls.push(`https://${serverIp}/login`);
            } else {
                urls.push(`http://${serverIp}/login`);
            }
        }
        urls.push(window.location.protocol + '//' + window.location.hostname + ':3000/login');

        document.getElementById('setupResult').classList.remove('d-none');
        document.getElementById('successAlert').classList.add('d-none');
        document.getElementById('errorAlert').classList.remove('d-none');
        document.getElementById('errorMessage').innerHTML =
            'Connection lost during setup (this can happen when SSL is configured). ' +
            'Setup may have completed successfully. Try: ' +
            urls.map(url => `<a href="${url}" class="alert-link">${url}</a>`).join(' or ');
    }

    function updateStepStatus(stepName, status) {
        const stepEl = document.querySelector(`.progress-step[data-step="${stepName}"]`);
        if (!stepEl) return;

        stepEl.className = 'progress-step ' + status;

        const icon = stepEl.querySelector('i');
        if (status === 'pending') {
            icon.className = 'bi bi-circle me-2';
        } else if (status === 'running') {
            // Use Bootstrap spinner (not bi-arrow-repeat which doesn't animate)
            icon.className = 'spinner-border spinner-border-sm me-2';
            icon.setAttribute('role', 'status');
        } else if (status === 'done') {
            icon.className = 'bi bi-check-circle-fill me-2';
            icon.removeAttribute('role');
        } else if (status === 'error') {
            icon.className = 'bi bi-x-circle-fill me-2';
            icon.removeAttribute('role');
        }
    }
</script>
