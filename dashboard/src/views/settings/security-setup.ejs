<%- include('../partials/pageHeader', {
    title: t('security:setup.title'),
    titleIcon: 'bi-shield-plus',
    breadcrumbs: isForced ? [] : [
        { label: t('common:nav.settings'), href: '/settings' },
        { label: t('security:title'), href: '/settings/security' },
        { label: t('security:setup.title') }
    ]
}) %>

<div class="row">
    <div class="col-md-8 mx-auto">
        <% if (isForced) { %>
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle"></i>
                <strong><%= t('security:setup.requiredTitle') %></strong><br>
                <%= t('security:setup.requiredDescription') %>
            </div>
        <% } %>

        <div class="card d-elevated mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-qr-code-scan"></i>
                    <%= t('security:setup.scanTitle') %>
                </h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center mb-4 mb-md-0">
                        <!-- QR Code -->
                        <img src="<%= qrCode %>" alt="QR Code" class="img-fluid mb-3" style="max-width: 200px;">
                        <p class="text-muted small mb-0"><%= t('security:setup.scanInstructions') %></p>
                    </div>
                    <div class="col-md-6">
                        <!-- Manual Entry -->
                        <h6><%= t('security:setup.manualTitle') %></h6>
                        <p class="text-muted small"><%= t('security:setup.manualDescription') %></p>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control font-monospace" value="<%= secret %>" readonly id="secretKey">
                            <button class="btn btn-outline-secondary" type="button" id="btn-copy-secret">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card d-elevated">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-check-circle"></i>
                    <%= t('security:setup.verifyTitle') %>
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4"><%= t('security:setup.verifyDescription') %></p>

                <form action="/settings/security/enable" method="POST">
                    <%- csrfInput %>
                    <div class="mb-4">
                        <label for="code" class="form-label"><%= t('security:verify.codeLabel') %></label>
                        <div class="input-group" style="max-width: 250px;">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input type="text"
                                   class="form-control form-control-lg text-center font-monospace"
                                   id="code"
                                   name="code"
                                   maxlength="6"
                                   pattern="\d{6}"
                                   placeholder="000000"
                                   autocomplete="one-time-code"
                                   inputmode="numeric"
                                   required
                                   autofocus>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-shield-check"></i>
                            <%= t('security:buttons.enable') %>
                        </button>
                        <% if (!isForced) { %>
                            <a href="/settings/security" class="btn btn-outline-secondary">
                                <%= t('common:buttons.cancel') %>
                            </a>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script nonce="<%= cspNonce %>">
function copySecret(e) {
    const input = document.getElementById('secretKey');
    navigator.clipboard.writeText(input.value).then(() => {
        const btn = e.target.closest('button');
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check"></i>';
        setTimeout(() => btn.innerHTML = originalHtml, 2000);
    });
}

document.getElementById('btn-copy-secret').addEventListener('click', copySecret);
</script>
