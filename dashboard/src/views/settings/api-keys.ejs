<%- include('../partials/pageHeader', {
    title: t('workspaces:settings.apiKey'),
    titleIcon: 'bi-key',
    breadcrumbs: [
        { label: t('common:nav.settings'), href: '/settings' },
        { label: t('workspaces:settings.apiKey') }
    ]
}) %>

<div class="row">
    <div class="col-md-8 mx-auto">
        <!-- Claude Code Authentication Options -->
        <div class="card d-elevated mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-terminal"></i>
                    <%= t('workspaces:claudeCode.title') %>
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    <%= t('workspaces:claudeCode.description') %>
                </p>

                <!-- Option 1: Claude Subscription -->
                <div class="card mb-3 border-success">
                    <div class="card-header bg-success-subtle">
                        <h6 class="mb-0 text-success">
                            <i class="bi bi-star-fill"></i>
                            <%= t('workspaces:claudeCode.subscription.title') %>
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small mb-2">
                            <%= t('workspaces:claudeCode.subscription.description') %>
                        </p>
                        <ul class="small mb-3">
                            <li><%= t('workspaces:claudeCode.subscription.benefit1') %></li>
                            <li><%= t('workspaces:claudeCode.subscription.benefit2') %></li>
                            <li><%= t('workspaces:claudeCode.subscription.benefit3') %></li>
                        </ul>
                        <div class="alert alert-light small mb-0">
                            <i class="bi bi-info-circle"></i>
                            <strong><%= t('workspaces:claudeCode.subscription.howTo') %></strong><br>
                            <%= t('workspaces:claudeCode.subscription.instructions') %>
                            <code class="d-block mt-2 p-2 bg-dark text-light rounded">claude login</code>
                        </div>
                    </div>
                </div>

                <!-- Option 2: API Key -->
                <div class="card border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h6 class="mb-0 text-warning-emphasis">
                            <i class="bi bi-key"></i>
                            <%= t('workspaces:claudeCode.apiKey.title') %>
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small mb-2">
                            <%= t('workspaces:claudeCode.apiKey.description') %>
                        </p>
                        <div class="alert alert-warning small mb-3">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong><%= t('workspaces:claudeCode.apiKey.costWarning') %></strong><br>
                            <%= t('workspaces:claudeCode.apiKey.costDetails') %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Anthropic API Key Configuration -->
        <div class="card d-elevated mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-key"></i>
                    Anthropic API Key
                    <span class="badge bg-secondary ms-2"><%= t('workspaces:claudeCode.apiKey.optional') %></span>
                </h5>
                <% if (hasAnthropicKey) { %>
                    <span class="badge bg-success">
                        <i class="bi bi-check-circle"></i>
                        <%= t('workspaces:claudeCode.configured') %>
                    </span>
                <% } else { %>
                    <span class="badge bg-secondary">
                        <i class="bi bi-x-circle"></i>
                        <%= t('workspaces:claudeCode.notConfigured') %>
                    </span>
                <% } %>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    <%= t('workspaces:claudeCode.apiKey.hint') %>
                </p>

                <form action="/settings/api-keys/anthropic" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="mb-3">
                        <label for="anthropic_api_key" class="form-label">
                            API Key
                        </label>
                        <input
                            type="password"
                            class="form-control font-monospace"
                            id="anthropic_api_key"
                            name="api_key"
                            placeholder="sk-ant-..."
                            <% if (hasAnthropicKey) { %>value="************************"<% } %>
                        >
                        <div class="form-text">
                            <%= t('workspaces:claudeCode.apiKey.getKey') %> <a href="https://console.anthropic.com" target="_blank">console.anthropic.com</a>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i>
                            <%= t('common:buttons.save') %>
                        </button>

                        <% if (hasAnthropicKey) { %>
                            <button type="button" class="btn btn-outline-primary" onclick="testAnthropicKey()">
                                <i class="bi bi-check-circle"></i>
                                <%= t('workspaces:claudeCode.testKey') %>
                            </button>

                            <button type="button" class="btn btn-outline-danger ms-auto" onclick="deleteAnthropicKey()">
                                <i class="bi bi-trash"></i>
                                <%= t('common:buttons.delete') %>
                            </button>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>

        <!-- OpenAI API Key (Future) -->
        <div class="card d-elevated mb-4 opacity-50">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-robot"></i>
                    OpenAI API Key
                </h5>
                <span class="badge bg-secondary">
                    Coming Soon
                </span>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-0">
                    OpenAI integration will be available in a future update.
                </p>
            </div>
        </div>

        <!-- Security Info Box -->
        <div class="alert alert-info">
            <i class="bi bi-shield-lock"></i>
            <strong><%= t('workspaces:claudeCode.security.title') %></strong><br>
            <%= t('workspaces:claudeCode.security.description') %>
        </div>
    </div>
</div>

<script>
async function testAnthropicKey() {
    const btn = event.target;
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Testing...';

    try {
        const response = await fetch('/settings/api-keys/anthropic/test', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json',
                'X-CSRF-Token': '<%= csrfToken %>'
            }
        });

        const data = await response.json();

        if (data.success) {
            alert('✓ ' + (data.message || 'API key is valid'));
        } else {
            alert('✗ ' + (data.error || 'API key test failed'));
        }
    } catch (error) {
        alert('Error: ' + error.message);
    } finally {
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-check-circle"></i> <%= t("workspaces:claudeCode.testKey") %>';
    }
}

async function deleteAnthropicKey() {
    if (!confirm('<%= t("common:confirm.delete") %>')) return;

    try {
        const response = await fetch('/settings/api-keys/anthropic', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json',
                'X-CSRF-Token': '<%= csrfToken %>'
            }
        });

        const data = await response.json();

        if (data.success) {
            location.reload();
        } else {
            alert(data.error || 'Failed to delete API key');
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
}
</script>
