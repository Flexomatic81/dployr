<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/projects">Projekte</a></li>
        <li class="breadcrumb-item active"><%= project.name %></li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-folder-fill text-warning"></i>
        <%= project.name %>
        <% if (project.status === 'running') { %>
            <span class="badge bg-success fs-6">Läuft</span>
        <% } else { %>
            <span class="badge bg-secondary fs-6">Gestoppt</span>
        <% } %>
        <% if (!projectAccess.isOwner) { %>
            <span class="badge bg-info fs-6" title="Geteilt von <%= projectAccess.ownerUsername %>">
                <i class="bi bi-share"></i> Geteilt
            </span>
        <% } %>
    </h1>
    <div class="btn-group">
        <% const canManage = projectAccess.isOwner || projectAccess.permission === 'manage' || projectAccess.permission === 'full'; %>
        <% if (project.status === 'running') { %>
            <% if (canManage) { %>
            <form action="/projects/<%= project.name %>/stop" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-stop-fill"></i> Stoppen
                </button>
            </form>
            <form action="/projects/<%= project.name %>/restart" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-arrow-clockwise"></i> Neustarten
                </button>
            </form>
            <% } %>
        <% } else { %>
            <% if (canManage) { %>
            <form action="/projects/<%= project.name %>/start" method="POST" class="d-inline">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-play-fill"></i> Starten
                </button>
            </form>
            <% } %>
        <% } %>
        <a href="/logs/<%= project.name %>" class="btn btn-info">
            <i class="bi bi-terminal"></i> Logs
        </a>
    </div>
</div>

<% if (!projectAccess.isOwner) { %>
<!-- Geteiltes Projekt Info-Banner -->
<div class="alert alert-info mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-share-fill"></i>
            <strong>Geteiltes Projekt</strong> von <strong><%= projectAccess.ownerUsername %></strong>
        </div>
        <div>
            <span class="badge <%= projectAccess.permission === 'full' ? 'bg-success' : projectAccess.permission === 'manage' ? 'bg-primary' : 'bg-secondary' %>">
                <i class="bi <%= projectAccess.permission === 'full' ? 'bi-star' : projectAccess.permission === 'manage' ? 'bi-gear' : 'bi-eye' %>"></i>
                <%= permissionLabels[projectAccess.permission] %>
            </span>
        </div>
    </div>
</div>
<% } %>

<div class="row">
    <!-- Projekt-Info -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Projekt-Details</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="35%">Name:</th>
                        <td><%= project.name %></td>
                    </tr>
                    <tr>
                        <th>Typ:</th>
                        <td>
                            <% if (project.templateType === 'php-website') { %>
                                <span class="badge bg-purple">PHP Website</span>
                            <% } else if (project.templateType === 'nodejs-app') { %>
                                <span class="badge bg-success">Node.js App</span>
                            <% } else if (project.templateType === 'laravel') { %>
                                <span class="badge bg-danger">Laravel / Symfony</span>
                            <% } else if (project.templateType === 'nodejs-static') { %>
                                <span class="badge bg-info">React / Vue (Build)</span>
                            <% } else if (project.templateType === 'nextjs') { %>
                                <span class="badge bg-dark">Next.js (SSR)</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Statische Website</span>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th>Port:</th>
                        <td>
                            <a href="http://<%= serverIp %>:<%= project.port %>" target="_blank">
                                <%= project.port %> <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Pfad:</th>
                        <td><code><%= project.path %></code></td>
                    </tr>
                    <tr>
                        <th>Container-Name:</th>
                        <td><code><%= project.containerName %></code></td>
                    </tr>
                    <% if (project.hasDatabase) { %>
                        <tr>
                            <th>Datenbank:</th>
                            <td><code><%= project.database %></code></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

    <!-- Container-Status -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-box"></i> Container
                    (<%= project.runningContainers %>/<%= project.totalContainers %> aktiv)
                </h5>
            </div>
            <div class="card-body">
                <% if (project.containers.length === 0) { %>
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-box-seam display-4"></i>
                        <p class="mt-2">Keine Container gefunden</p>
                        <p class="small">Starte das Projekt um Container zu erstellen</p>
                    </div>
                <% } else { %>
                    <div class="list-group">
                        <% project.containers.forEach(container => { %>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-box<%= container.State === 'running' ? '-fill text-success' : ' text-muted' %>"></i>
                                    <strong><%= container.Names[0].replace('/', '') %></strong>
                                    <br>
                                    <small class="text-muted"><%= container.Image %></small>
                                </div>
                                <% if (container.State === 'running') { %>
                                    <span class="badge bg-success">Läuft</span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= container.State %></span>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% if (gitStatus && gitStatus.connected) { %>
<!-- GitHub - kombinierte Git Integration und Auto-Deploy -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-github"></i> GitHub
            <span class="badge bg-success ms-2">Verbunden</span>
            <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                <span class="badge bg-info ms-1">Auto-Deploy</span>
            <% } %>
        </h5>
    </div>
    <div class="card-body">
        <% if (gitStatus.error) { %>
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> <%= gitStatus.error %>
            </div>
        <% } else { %>
            <!-- Repository-Info -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <table class="table table-borderless table-sm mb-0">
                        <tr>
                            <th width="20%">Repository:</th>
                            <td>
                                <a href="<%= gitStatus.remoteUrl %>" target="_blank">
                                    <%= gitStatus.remoteUrl %> <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Branch:</th>
                            <td><span class="badge bg-primary"><%= gitStatus.branch %></span></td>
                        </tr>
                        <tr>
                            <th>Letzter Commit:</th>
                            <td><code><%= gitStatus.lastCommit %></code></td>
                        </tr>
                        <% if (gitStatus.hasLocalChanges) { %>
                            <tr>
                                <th>Status:</th>
                                <td><span class="badge bg-warning text-dark">Lokale Aenderungen vorhanden</span></td>
                            </tr>
                        <% } %>
                    </table>
                </div>
                <div class="col-md-4 d-flex align-items-start justify-content-end">
                    <div class="btn-group">
                        <% if (canManage) { %>
                        <form action="/projects/<%= project.name %>/git/pull" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-cloud-download"></i> Pull
                            </button>
                        </form>
                        <form action="/projects/<%= project.name %>/autodeploy/trigger" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-primary btn-sm" title="Pull + Restart">
                                <i class="bi bi-lightning"></i> Deploy
                            </button>
                        </form>
                        <% } %>
                        <% if (projectAccess.isOwner) { %>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#gitDisconnectModal" title="Git-Verbindung trennen">
                            <i class="bi bi-x-circle"></i>
                        </button>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Auto-Deploy Sektion (nur für Besitzer die volle Kontrolle) -->
        <% if (projectAccess.isOwner) { %>
        <div class="border-top pt-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <strong><i class="bi bi-arrow-repeat"></i> Auto-Deploy</strong>
                    <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                        <span class="badge bg-success ms-2">Aktiv</span>
                        <form action="/projects/<%= project.name %>/autodeploy/interval" method="POST" class="d-inline ms-2">
                            <select name="interval" class="form-select form-select-sm" style="width: auto; display: inline-block;" onchange="this.form.submit()">
                                <% const currentInterval = autoDeployConfig.interval_minutes || 5; %>
                                <option value="5" <%= currentInterval === 5 ? 'selected' : '' %>>5 Min</option>
                                <option value="10" <%= currentInterval === 10 ? 'selected' : '' %>>10 Min</option>
                                <option value="15" <%= currentInterval === 15 ? 'selected' : '' %>>15 Min</option>
                                <option value="30" <%= currentInterval === 30 ? 'selected' : '' %>>30 Min</option>
                                <option value="60" <%= currentInterval === 60 ? 'selected' : '' %>>60 Min</option>
                            </select>
                        </form>
                    <% } else { %>
                        <span class="badge bg-secondary ms-2">Inaktiv</span>
                    <% } %>
                </div>
                <div>
                    <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                        <form action="/projects/<%= project.name %>/autodeploy/disable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pause-circle"></i> Deaktivieren
                            </button>
                        </form>
                    <% } else { %>
                        <form action="/projects/<%= project.name %>/autodeploy/enable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-play-circle"></i> Aktivieren
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>

            <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                <% if (autoDeployConfig.last_check) { %>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-clock"></i> Letzte Pruefung: <%= new Date(autoDeployConfig.last_check).toLocaleString('de-DE') %>
                    </p>
                <% } %>

                <% if (deploymentHistory && deploymentHistory.length > 0) { %>
                    <h6 class="mb-2">Deployment-Historie</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Zeitpunkt</th>
                                    <th>Typ</th>
                                    <th>Commit</th>
                                    <th>Status</th>
                                    <th>Dauer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% deploymentHistory.forEach(log => { %>
                                    <tr>
                                        <td>
                                            <small><%= new Date(log.created_at).toLocaleString('de-DE') %></small>
                                        </td>
                                        <td>
                                            <% if (log.trigger_type === 'auto') { %>
                                                <span class="badge bg-info">Auto</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Manuell</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.old_commit_hash && log.new_commit_hash && log.old_commit_hash !== log.new_commit_hash) { %>
                                                <code><%= log.old_commit_hash.substring(0, 7) %></code>
                                                <i class="bi bi-arrow-right"></i>
                                                <code><%= log.new_commit_hash.substring(0, 7) %></code>
                                            <% } else if (log.new_commit_hash) { %>
                                                <code><%= log.new_commit_hash.substring(0, 7) %></code>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                            <% if (log.commit_message && log.commit_message !== 'Keine Aenderungen') { %>
                                                <br><small class="text-muted" title="<%= log.commit_message %>">
                                                    <%= log.commit_message.length > 40 ? log.commit_message.substring(0, 40) + '...' : log.commit_message %>
                                                </small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.status === 'success') { %>
                                                <span class="badge bg-success">Erfolgreich</span>
                                            <% } else if (log.status === 'failed') { %>
                                                <span class="badge bg-danger" title="<%= log.error_message %>">Fehlgeschlagen</span>
                                            <% } else if (log.status === 'pulling') { %>
                                                <span class="badge bg-info">Pulling...</span>
                                            <% } else if (log.status === 'restarting') { %>
                                                <span class="badge bg-warning">Neustart...</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= log.status %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.duration_ms) { %>
                                                <small><%= (log.duration_ms / 1000).toFixed(1) %>s</small>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-muted text-center py-2">
                        <i class="bi bi-clock-history"></i> Noch keine Deployments
                    </div>
                <% } %>
            <% } else { %>
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle"></i>
                    Aktiviere Auto-Deploy um automatisch bei neuen Commits zu deployen.
                </p>
            <% } %>
        </div>
        <% } %><!-- Ende projectAccess.isOwner für Auto-Deploy -->
    </div>
</div>
<% } %>

<% const canChangeType = projectAccess.isOwner || projectAccess.permission === 'full'; %>
<!-- Projekttyp-Warnung bei Mismatch (nur für Besitzer/full) -->
<% if (typeMismatch && canChangeType) { %>
<div class="alert alert-warning mb-4" role="alert">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
        <div class="flex-grow-1">
            <strong>Projekttyp-Empfehlung:</strong> Basierend auf den Projektdateien wurde ein anderer Typ erkannt.
            <br>
            <small>
                Aktuell: <strong>
                <% if (project.templateType === 'php-website') { %>PHP Website
                <% } else if (project.templateType === 'nodejs-app') { %>Node.js App
                <% } else if (project.templateType === 'laravel') { %>Laravel / Symfony
                <% } else if (project.templateType === 'nodejs-static') { %>React / Vue (Build)
                <% } else if (project.templateType === 'nextjs') { %>Next.js (SSR)
                <% } else { %>Statische Website<% } %>
                </strong>
                &rarr; Empfohlen: <strong>
                <% if (detectedType === 'php') { %>PHP Website
                <% } else if (detectedType === 'nodejs') { %>Node.js App
                <% } else if (detectedType === 'laravel') { %>Laravel / Symfony
                <% } else if (detectedType === 'nodejs-static') { %>React / Vue (Build)
                <% } else if (detectedType === 'nextjs') { %>Next.js (SSR)
                <% } else { %>Statische Website<% } %>
                </strong>
            </small>
        </div>
        <form action="/projects/<%= project.name %>/change-type" method="POST" class="ms-3">
            <input type="hidden" name="type" value="<%= detectedType %>">
            <button type="submit" class="btn btn-warning btn-sm">
                <i class="bi bi-arrow-repeat"></i> Typ anpassen
            </button>
        </form>
    </div>
</div>
<% } %>

<!-- Projekteinstellungen (nur für Besitzer/full) -->
<% if (canChangeType) { %>
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-gear"></i> Projekteinstellungen</h5>
    </div>
    <div class="card-body">
        <form action="/projects/<%= project.name %>/change-type" method="POST" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="projectType" class="form-label">Projekttyp</label>
                <select name="type" id="projectType" class="form-select">
                    <optgroup label="Einfache Projekte">
                        <option value="static" <%= project.templateType === 'static-website' ? 'selected' : '' %>>
                            Statische Website (nginx)
                        </option>
                        <option value="php" <%= project.templateType === 'php-website' ? 'selected' : '' %>>
                            PHP Website (Apache + PHP)
                        </option>
                        <option value="nodejs" <%= project.templateType === 'nodejs-app' ? 'selected' : '' %>>
                            Node.js App (Express)
                        </option>
                    </optgroup>
                    <optgroup label="Framework-Projekte">
                        <option value="laravel" <%= project.templateType === 'laravel' ? 'selected' : '' %>>
                            Laravel / Symfony (Composer)
                        </option>
                        <option value="nodejs-static" <%= project.templateType === 'nodejs-static' ? 'selected' : '' %>>
                            React / Vue / Vite (Static Build)
                        </option>
                        <option value="nextjs" <%= project.templateType === 'nextjs' ? 'selected' : '' %>>
                            Next.js (SSR)
                        </option>
                    </optgroup>
                </select>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-arrow-repeat"></i> Typ ändern
                </button>
            </div>
            <div class="col-12">
                <% if (!typeMismatch) { %>
                <small class="text-success">
                    <i class="bi bi-check-circle"></i>
                    Erkannter Projekttyp stimmt mit Konfiguration überein.
                </small>
                <% } else { %>
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Beim Ändern des Typs wird die docker-compose.yml neu generiert und der Container neu gestartet.
                </small>
                <% } %>
            </div>
        </form>
    </div>
</div>
<% } %><!-- Ende canChangeType für Projekteinstellungen -->

<!-- Umgebungsvariablen (nur für manage oder höher) -->
<% if (canManage) { %>
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-file-earmark-code"></i> Umgebungsvariablen (.env)
            <% if (userDatabases && userDatabases.length > 0) { %>
            <small class="text-muted ms-2">& Datenbank-Verbindung</small>
            <% } %>
        </h5>
        <div class="btn-group btn-group-sm">
            <% if (envExample && envExample.exists) { %>
            <form action="/projects/<%= project.name %>/env/copy-example" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary" title="<%= envExample.filename %> zu .env kopieren">
                    <i class="bi bi-file-earmark-arrow-down"></i> <%= envExample.filename %>
                </button>
            </form>
            <% } %>
            <% if (userDatabases && userDatabases.length > 0) { %>
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" title="Datenbank-Credentials einfügen">
                <i class="bi bi-database-add"></i> DB einfügen
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <% userDatabases.forEach(db => { %>
                <li>
                    <form action="/projects/<%= project.name %>/env/add-db" method="POST">
                        <input type="hidden" name="database" value="<%= db.database %>">
                        <button type="submit" class="dropdown-item">
                            <i class="bi bi-database<%= db.type === 'postgresql' ? '-fill text-primary' : ' text-warning' %>"></i>
                            <%= db.name %> <small class="text-muted">(<%= db.type %>)</small>
                        </button>
                    </form>
                </li>
                <% }) %>
            </ul>
            <% } %>
        </div>
    </div>
    <div class="card-body">
        <% if (envExample && envExample.exists && !envContent.trim()) { %>
        <div class="alert alert-info mb-3">
            <i class="bi bi-lightbulb"></i>
            <strong>Tipp:</strong> Es wurde eine <code><%= envExample.filename %></code> Datei gefunden.
            Klicke oben auf den Button um sie als Vorlage zu verwenden.
        </div>
        <% } %>
        <form action="/projects/<%= project.name %>/env" method="POST">
            <div class="mb-3">
                <textarea name="envContent" class="form-control font-monospace" rows="10"
                    placeholder="# Umgebungsvariablen im Format KEY=value&#10;DB_HOST=localhost&#10;API_KEY=geheim"><%= envContent %></textarea>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Nach dem Speichern muss der Container neu gestartet werden, damit die Änderungen wirksam werden.
                </small>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Speichern
                </button>
            </div>
        </form>
    </div>
</div>
<% } %><!-- Ende canManage für Umgebungsvariablen -->

<!-- Projekt teilen (nur für Besitzer) -->
<% if (projectAccess.isOwner) { %>
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-share"></i> Projekt teilen</h5>
    </div>
    <div class="card-body">
        <% if (projectShares && projectShares.length > 0) { %>
        <h6 class="mb-3">Geteilt mit:</h6>
        <div class="table-responsive mb-3">
            <table class="table table-sm table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Benutzer</th>
                        <th>Berechtigung</th>
                        <th class="text-end">Aktion</th>
                    </tr>
                </thead>
                <tbody>
                    <% projectShares.forEach(share => { %>
                    <tr>
                        <td>
                            <i class="bi bi-person"></i>
                            <strong><%= share.username %></strong>
                            <small class="text-muted">(<%= share.shared_system_username %>)</small>
                        </td>
                        <td>
                            <form action="/projects/<%= project.name %>/shares/<%= share.shared_with_id %>/update" method="POST" class="d-inline">
                                <select name="permission" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                                    <option value="read" <%= share.permission === 'read' ? 'selected' : '' %>>Ansehen</option>
                                    <option value="manage" <%= share.permission === 'manage' ? 'selected' : '' %>>Verwalten</option>
                                    <option value="full" <%= share.permission === 'full' ? 'selected' : '' %>>Vollzugriff</option>
                                </select>
                            </form>
                        </td>
                        <td class="text-end">
                            <form action="/projects/<%= project.name %>/shares/<%= share.shared_with_id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Freigabe für <%= share.username %> wirklich entfernen?')">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <p class="text-muted mb-3">
            <i class="bi bi-info-circle"></i>
            Dieses Projekt ist noch nicht mit anderen Benutzern geteilt.
        </p>
        <% } %>

        <% if (availableUsers && availableUsers.length > 0) { %>
        <hr>
        <h6 class="mb-3">Neuen Benutzer hinzufügen:</h6>
        <form action="/projects/<%= project.name %>/shares" method="POST" class="row g-2 align-items-end">
            <div class="col-md-5">
                <label for="shareUser" class="form-label">Benutzer</label>
                <select name="userId" id="shareUser" class="form-select" required>
                    <option value="">-- Benutzer wählen --</option>
                    <% availableUsers.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.username %> (<%= user.system_username %>)</option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-4">
                <label for="sharePermission" class="form-label">Berechtigung</label>
                <select name="permission" id="sharePermission" class="form-select" required>
                    <option value="read">Ansehen</option>
                    <option value="manage" selected>Verwalten</option>
                    <option value="full">Vollzugriff</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-plus-lg"></i> Hinzufügen
                </button>
            </div>
        </form>
        <div class="mt-2">
            <small class="text-muted">
                <strong>Ansehen:</strong> Status und Logs sehen |
                <strong>Verwalten:</strong> + Start/Stop, Pull, .env |
                <strong>Vollzugriff:</strong> + Typ ändern
            </small>
        </div>
        <% } else if (projectShares && projectShares.length === 0) { %>
        <p class="text-muted small mb-0">
            <i class="bi bi-info-circle"></i>
            Keine weiteren Benutzer verfügbar zum Teilen.
        </p>
        <% } %>
    </div>
</div>
<% } %>

<!-- Gefahrenzone (nur für Besitzer) -->
<% if (projectAccess.isOwner) { %>
<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Gefahrenzone</h5>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1">Projekt löschen</h6>
                <p class="text-muted mb-0 small">Das Projekt und alle Dateien werden unwiderruflich gelöscht.</p>
            </div>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="bi bi-trash"></i> Löschen
            </button>
        </div>
    </div>
</div>
<% } %><!-- Ende projectAccess.isOwner für Gefahrenzone -->

<!-- Delete Modal (nur für Besitzer) -->
<% if (projectAccess.isOwner) { %>
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Projekt löschen
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bist du sicher, dass du das Projekt <strong>"<%= project.name %>"</strong> löschen möchtest?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Achtung:</strong> Diese Aktion kann nicht rückgängig gemacht werden!
                </div>
                <ul>
                    <li>Alle Container werden gestoppt und entfernt</li>
                    <li>Alle Projekt-Dateien werden gelöscht</li>
                    <li>Die Datenbank wird <strong>nicht</strong> automatisch gelöscht</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <form action="/projects/<%= project.name %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Ja, löschen
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<% } %><!-- Ende projectAccess.isOwner für Delete Modal -->

<!-- Git Disconnect Modal (nur für Besitzer) -->
<% if (projectAccess.isOwner) { %>
<div class="modal fade" id="gitDisconnectModal" tabindex="-1">
