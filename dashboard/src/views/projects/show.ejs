<!-- Page Header -->
<% const canManage = projectAccess.isOwner || projectAccess.permission === 'manage' || projectAccess.permission === 'full'; %>
<div class="d-page-header">
    <div class="d-page-header-left">
        <a href="/projects" class="btn btn-sm btn-subtle mb-2">
            <i class="bi bi-arrow-left"></i> <%= t('common:nav.projects') %>
        </a>
        <h1 class="d-page-title">
            <i class="bi bi-folder"></i>
            <%= project.name %>
        </h1>
        <div class="d-flex align-items-center gap-2 mt-2">
            <% if (project.status === 'running') { %>
                <span class="badge bg-success-subtle text-success"><i class="bi bi-check-circle-fill"></i> <%= t('common:status.running') %></span>
            <% } else { %>
                <span class="badge bg-secondary-subtle text-secondary"><i class="bi bi-stop-circle"></i> <%= t('common:status.stopped') %></span>
            <% } %>
            <% if (!projectAccess.isOwner) { %>
                <span class="badge bg-info-subtle text-info" title="<%= t('projects:show.sharedProject') %> <%= t('projects:show.sharedFrom') %> <%= projectAccess.ownerUsername %>">
                    <i class="bi bi-share"></i> <%= t('projects:show.shared') %>
                </span>
            <% } %>
        </div>
    </div>
    <div class="d-page-header-actions">
        <a href="/logs/<%= project.name %>" class="btn btn-outline-secondary">
            <i class="bi bi-terminal"></i> <%= t('common:buttons.logs') %>
        </a>
        <% if (project.status === 'running') { %>
            <% if (canManage) { %>
            <form action="/projects/<%= project.name %>/restart" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-warning">
                    <i class="bi bi-arrow-clockwise"></i> <%= t('common:buttons.restart') %>
                </button>
            </form>
            <form action="/projects/<%= project.name %>/stop" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-stop-fill"></i> <%= t('common:buttons.stop') %>
                </button>
            </form>
            <% } %>
        <% } else { %>
            <% if (canManage) { %>
            <form action="/projects/<%= project.name %>/start" method="POST" class="d-inline">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-play-fill"></i> <%= t('common:buttons.start') %>
                </button>
            </form>
            <% } %>
        <% } %>
    </div>
</div>

<% if (!projectAccess.isOwner) { %>
<!-- Shared project info banner -->
<div class="alert alert-info d-elevated mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-share-fill me-2"></i>
            <strong><%= t('projects:show.sharedProject') %></strong> <%= t('projects:show.sharedFrom') %> <strong><%= projectAccess.ownerUsername %></strong>
        </div>
        <span class="badge <%= projectAccess.permission === 'full' ? 'bg-success-subtle text-success' : projectAccess.permission === 'manage' ? 'bg-primary-subtle text-primary' : 'bg-secondary-subtle text-secondary' %>">
            <i class="bi <%= projectAccess.permission === 'full' ? 'bi-star' : projectAccess.permission === 'manage' ? 'bi-gear' : 'bi-eye' %>"></i>
            <%= permissionLabels[projectAccess.permission] %>
        </span>
    </div>
</div>
<% } %>

<div class="row">
    <!-- Project info -->
    <div class="col-md-6 mb-4">
        <div class="card d-elevated h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> <%= t('projects:details') %></h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <th width="35%"><%= t('projects:info.name') %>:</th>
                        <td><%= project.name %></td>
                    </tr>
                    <tr>
                        <th><%= t('projects:info.type') %>:</th>
                        <td>
                            <% if (project.templateType === 'php-website') { %>
                                <span class="badge bg-purple-subtle text-purple"><%= t('projects:types.php') %></span>
                            <% } else if (project.templateType === 'nodejs-app') { %>
                                <span class="badge bg-success-subtle text-success"><%= t('projects:types.nodejs') %></span>
                            <% } else if (project.templateType === 'laravel') { %>
                                <span class="badge bg-danger-subtle text-danger"><%= t('projects:types.laravel') %></span>
                            <% } else if (project.templateType === 'nodejs-static') { %>
                                <span class="badge bg-info-subtle text-info"><%= t('projects:types.nodejsStatic') %></span>
                            <% } else if (project.templateType === 'nextjs') { %>
                                <span class="badge bg-dark text-white"><%= t('projects:types.nextjs') %></span>
                            <% } else { %>
                                <span class="badge bg-secondary-subtle text-secondary"><%= t('projects:types.static') %></span>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th><%= t('projects:info.port') %>:</th>
                        <td>
                            <a href="http://<%= serverIp %>:<%= project.port %>" target="_blank" class="text-decoration-none">
                                <%= project.port %> <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th><%= t('projects:info.path') %>:</th>
                        <td><code class="small"><%= project.path %></code></td>
                    </tr>
                    <tr>
                        <th><%= t('projects:info.containerName') %>:</th>
                        <td><code class="small"><%= project.containerName %></code></td>
                    </tr>
                    <% if (project.hasDatabase) { %>
                        <tr>
                            <th><%= t('projects:info.database') %>:</th>
                            <td><code class="small"><%= project.database %></code></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

    <!-- Container status -->
    <div class="col-md-6 mb-4">
        <div class="card d-elevated h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-box"></i> <%= t('projects:info.containers') %></h5>
                <span class="badge bg-secondary-subtle text-secondary">
                    <%= project.runningContainers %>/<%= project.totalContainers %> <%= t('common:status.active').toLowerCase() %>
                </span>
            </div>
            <div class="card-body">
                <% if (project.containers.length === 0) { %>
                    <%- include('../components/emptyState', {
                        icon: 'bi-box-seam',
                        title: t('projects:info.noContainers'),
                        description: t('projects:info.noContainersHint'),
                        compact: true
                    }) %>
                <% } else { %>
                    <div class="list-group list-group-flush">
                        <% project.containers.forEach(container => { %>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <i class="bi bi-box<%= container.State === 'running' ? '-fill text-success' : ' text-muted' %>"></i>
                                    <strong><%= container.Names[0].replace('/', '') %></strong>
                                    <br>
                                    <small class="text-muted"><%= container.Image %></small>
                                </div>
                                <% if (container.State === 'running') { %>
                                    <span class="badge bg-success-subtle text-success"><%= t('common:status.running') %></span>
                                <% } else { %>
                                    <span class="badge bg-secondary-subtle text-secondary"><%= container.State %></span>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% if (gitStatus && gitStatus.connected) { %>
<!-- GitHub - combined Git integration and Auto-Deploy -->
<div class="card d-elevated mb-4">
    <div class="card-header d-collapsible-header collapsed" role="button" data-bs-toggle="collapse" data-bs-target="#collapseGithub" aria-expanded="false" aria-controls="collapseGithub">
        <h5 class="mb-0 d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-github"></i> <%= t('projects:git.title') %>
                <span class="badge bg-success-subtle text-success ms-2"><%= t('projects:git.connected') %></span>
                <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                    <span class="badge bg-info-subtle text-info ms-1"><%= t('projects:autoDeploy.title') %></span>
                <% } %>
                <% if (webhookConfig && webhookConfig.webhook_enabled) { %>
                    <span class="badge bg-purple-subtle text-purple ms-1"><i class="bi bi-webhook"></i> Webhook</span>
                <% } %>
            </span>
            <i class="bi bi-chevron-down collapse-icon"></i>
        </h5>
    </div>
    <div class="collapse" id="collapseGithub">
    <div class="card-body">
        <% if (gitStatus.error) { %>
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle"></i> <%= gitStatus.error %>
            </div>
        <% } else { %>
            <!-- Repository info -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <table class="table table-borderless table-sm mb-0">
                        <tr>
                            <th width="20%"><%= t('projects:git.repository') %>:</th>
                            <td>
                                <a href="<%= gitStatus.remoteUrl %>" target="_blank" class="text-decoration-none">
                                    <%= gitStatus.remoteUrl %> <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th><%= t('projects:git.branch') %>:</th>
                            <td><span class="badge bg-primary-subtle text-primary"><%= gitStatus.branch %></span></td>
                        </tr>
                        <tr>
                            <th><%= t('projects:git.lastCommit') %>:</th>
                            <td><code class="small"><%= gitStatus.lastCommit %></code></td>
                        </tr>
                        <% if (gitStatus.hasLocalChanges) { %>
                            <tr>
                                <th><%= t('common:labels.status') %>:</th>
                                <td><span class="badge bg-warning-subtle text-warning"><%= t('projects:info.localChanges') %></span></td>
                            </tr>
                        <% } %>
                    </table>
                </div>
                <div class="col-md-4 d-flex align-items-start justify-content-end">
                    <div class="btn-group">
                        <% if (canManage) { %>
                        <form action="/projects/<%= project.name %>/git/pull" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-cloud-download"></i> <%= t('projects:git.pull') %>
                            </button>
                        </form>
                        <form action="/projects/<%= project.name %>/autodeploy/trigger" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-primary btn-sm" title="Pull + Restart">
                                <i class="bi bi-lightning"></i> Deploy
                            </button>
                        </form>
                        <% } %>
                        <% if (projectAccess.isOwner) { %>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#gitDisconnectModal" title="<%= t('projects:show.gitDisconnectTitle') %>">
                            <i class="bi bi-x-circle"></i>
                        </button>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Auto-Deploy section (only for owner) -->
        <% if (projectAccess.isOwner) { %>
        <div class="border-top pt-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center gap-2">
                    <strong><i class="bi bi-arrow-repeat"></i> <%= t('projects:autoDeploy.title') %></strong>
                    <%- include('../partials/help-icon', { text: t('projects:show.autoDeployHelp') }) %>
                    <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                        <span class="badge bg-success-subtle text-success"><%= t('projects:show.autoDeployActive') %></span>
                        <form action="/projects/<%= project.name %>/autodeploy/interval" method="POST" class="d-inline" id="intervalForm">
                            <select name="interval" class="form-select form-select-sm" style="width: auto; display: inline-block;" id="intervalSelect"
                                data-bs-toggle="tooltip" data-bs-placement="top" title="<%= t('projects:show.intervalTooltip') %>">
                                <% const currentInterval = autoDeployConfig.interval_minutes || 5; %>
                                <option value="5" <%= currentInterval === 5 ? 'selected' : '' %>>5 Min</option>
                                <option value="10" <%= currentInterval === 10 ? 'selected' : '' %>>10 Min</option>
                                <option value="15" <%= currentInterval === 15 ? 'selected' : '' %>>15 Min</option>
                                <option value="30" <%= currentInterval === 30 ? 'selected' : '' %>>30 Min</option>
                                <option value="60" <%= currentInterval === 60 ? 'selected' : '' %>>60 Min</option>
                            </select>
                        </form>
                    <% } else { %>
                        <span class="badge bg-secondary-subtle text-secondary"><%= t('projects:show.autoDeployInactive') %></span>
                    <% } %>
                </div>
                <div>
                    <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                        <form action="/projects/<%= project.name %>/autodeploy/disable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pause-circle"></i> <%= t('projects:autoDeploy.disable') %>
                            </button>
                        </form>
                    <% } else { %>
                        <form action="/projects/<%= project.name %>/autodeploy/enable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-play-circle"></i> <%= t('projects:autoDeploy.enable') %>
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>

            <% if (autoDeployConfig && autoDeployConfig.enabled) { %>
                <% if (autoDeployConfig.last_check) { %>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-clock"></i> <%= t('projects:autoDeploy.lastCheck') %>: <%= new Date(autoDeployConfig.last_check).toLocaleString(currentLanguage === 'de' ? 'de-DE' : 'en-US') %>
                    </p>
                <% } %>

                <% if (deploymentHistory && deploymentHistory.length > 0) { %>
                    <h6 class="mb-2"><%= t('projects:show.deployHistory') %></h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th><%= t('admin:logs.timestamp') %></th>
                                    <th><%= t('projects:show.deployType') %></th>
                                    <th><%= t('projects:show.deployCommit') %></th>
                                    <th><%= t('projects:show.deployStatus') %></th>
                                    <th><%= t('projects:show.deployDuration') %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% deploymentHistory.forEach(log => { %>
                                    <tr>
                                        <td>
                                            <small><%= new Date(log.created_at).toLocaleString(currentLanguage === 'de' ? 'de-DE' : 'en-US') %></small>
                                        </td>
                                        <td>
                                            <% if (log.trigger_type === 'auto') { %>
                                                <span class="badge bg-info-subtle text-info"><%= t('projects:show.deployAuto') %></span>
                                            <% } else { %>
                                                <span class="badge bg-secondary-subtle text-secondary"><%= t('projects:show.deployManual') %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.old_commit_hash && log.new_commit_hash && log.old_commit_hash !== log.new_commit_hash) { %>
                                                <code class="small"><%= log.old_commit_hash.substring(0, 7) %></code>
                                                <i class="bi bi-arrow-right text-muted"></i>
                                                <code class="small"><%= log.new_commit_hash.substring(0, 7) %></code>
                                            <% } else if (log.new_commit_hash) { %>
                                                <code class="small"><%= log.new_commit_hash.substring(0, 7) %></code>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                            <% if (log.commit_message && log.commit_message !== t('projects:show.noChanges')) { %>
                                                <br><small class="text-muted" title="<%= log.commit_message %>">
                                                    <%= log.commit_message.length > 40 ? log.commit_message.substring(0, 40) + '...' : log.commit_message %>
                                                </small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.status === 'success') { %>
                                                <span class="badge bg-success-subtle text-success"><%= t('common:status.success') %></span>
                                            <% } else if (log.status === 'failed') { %>
                                                <span class="badge bg-danger-subtle text-danger" title="<%= log.error_message %>"><%= t('common:status.failed') %></span>
                                            <% } else if (log.status === 'pulling') { %>
                                                <span class="badge bg-info-subtle text-info">Pulling...</span>
                                            <% } else if (log.status === 'restarting') { %>
                                                <span class="badge bg-warning-subtle text-warning"><%= t('common:buttons.restart') %>...</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary-subtle text-secondary"><%= log.status %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (log.duration_ms) { %>
                                                <small><%= (log.duration_ms / 1000).toFixed(1) %>s</small>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-muted text-center py-2">
                        <i class="bi bi-clock-history"></i> <%= t('projects:show.noDeploymentsYet') %>
                    </div>
                <% } %>
            <% } else { %>
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle"></i>
                    <%= t('projects:show.autoDeployInfo') %>
                </p>
            <% } %>
        </div>

        <!-- Webhook section (independent of polling auto-deploy) -->
        <div class="border-top pt-3 mt-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center gap-2">
                    <strong><i class="bi bi-webhook"></i> Webhook</strong>
                    <%- include('../partials/help-icon', { text: t('projects:webhook.help') }) %>
                    <% if (webhookConfig && webhookConfig.webhook_enabled) { %>
                        <span class="badge bg-success-subtle text-success"><%= t('common:status.active') %></span>
                    <% } else { %>
                        <span class="badge bg-secondary-subtle text-secondary"><%= t('common:status.inactive') %></span>
                    <% } %>
                </div>
                <div>
                    <% if (webhookConfig && webhookConfig.webhook_enabled) { %>
                        <form action="/projects/<%= project.name %>/webhook/disable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pause-circle"></i> <%= t('projects:webhook.disable') %>
                            </button>
                        </form>
                    <% } else { %>
                        <form action="/projects/<%= project.name %>/webhook/enable" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-play-circle"></i> <%= t('projects:webhook.enable') %>
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>

            <% if (webhookConfig && webhookConfig.webhook_enabled) { %>
                <!-- Webhook URL -->
                <div class="mb-3">
                    <label class="form-label small text-muted"><%= t('projects:webhook.urlLabel') %></label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                        <input type="text" class="form-control font-monospace" id="webhookUrl"
                               value="<%= serverIp.includes('localhost') ? 'http' : 'https' %>://<%= serverIp %>/api/webhooks/<%= webhookConfig.id %>"
                               readonly>
                        <button class="btn btn-outline-secondary copy-btn" type="button" data-copy-target="webhookUrl" title="<%= t('common:buttons.copy') %>">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </div>
                </div>

                <!-- One-time secret display (after enable/regenerate) -->
                <% if (webhookSecret && webhookSecret.secret) { %>
                <div class="alert alert-warning mb-3">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-key-fill fs-4 me-3"></i>
                        <div class="flex-grow-1">
                            <strong><%= t('projects:webhook.secretLabel') %></strong>
                            <p class="small mb-2"><%= t('projects:webhook.secretWarning') %></p>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control font-monospace" id="webhookSecret"
                                       value="<%= webhookSecret.secret %>" readonly>
                                <button class="btn btn-outline-secondary copy-btn" type="button" data-copy-target="webhookSecret" title="<%= t('common:buttons.copy') %>">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Regenerate secret button -->
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        <%= t('projects:webhook.branchInfo', { branch: webhookConfig.branch || 'main' }) %>
                    </small>
                    <form action="/projects/<%= project.name %>/webhook/regenerate" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-warning btn-sm"
                                data-confirm="<%= t('projects:webhook.regenerateConfirm') %>">
                            <i class="bi bi-arrow-repeat"></i> <%= t('projects:webhook.regenerate') %>
                        </button>
                    </form>
                </div>

                <!-- Setup instructions (collapsible) -->
                <div class="mt-3">
                    <a class="text-decoration-none small" data-bs-toggle="collapse" href="#webhookSetup" role="button" aria-expanded="false">
                        <i class="bi bi-question-circle"></i> <%= t('projects:webhook.setupInstructions') %>
                    </a>
                    <div class="collapse mt-2" id="webhookSetup">
                        <div class="card card-body bg-body-secondary small">
                            <div class="mb-3">
                                <strong><i class="bi bi-github"></i> GitHub:</strong>
                                <ol class="mb-0 ps-3 mt-1">
                                    <li><%= t('projects:webhook.github.step1') %></li>
                                    <li><%= t('projects:webhook.github.step2') %></li>
                                    <li><%= t('projects:webhook.github.step3') %></li>
                                    <li><%= t('projects:webhook.github.step4') %></li>
                                </ol>
                            </div>
                            <div class="mb-3">
                                <strong><i class="bi bi-gitlab text-warning"></i> GitLab:</strong>
                                <ol class="mb-0 ps-3 mt-1">
                                    <li><%= t('projects:webhook.gitlab.step1') %></li>
                                    <li><%= t('projects:webhook.gitlab.step2') %></li>
                                    <li><%= t('projects:webhook.gitlab.step3') %></li>
                                </ol>
                            </div>
                            <div>
                                <strong><i class="bi bi-bucket text-primary"></i> Bitbucket:</strong>
                                <ol class="mb-0 ps-3 mt-1">
                                    <li><%= t('projects:webhook.bitbucket.step1') %></li>
                                    <li><%= t('projects:webhook.bitbucket.step2') %></li>
                                    <li><%= t('projects:webhook.bitbucket.step3') %></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle"></i>
                    <%= t('projects:webhook.info') %>
                </p>
            <% } %>
        </div>
        <% } %><!-- End projectAccess.isOwner for Auto-Deploy -->
    </div>
    </div><!-- End collapse -->
</div>
<% } %>

<% const canChangeType = projectAccess.isOwner || projectAccess.permission === 'full'; %>
<!-- Project type warning on mismatch (only for owner/full) -->
<% if (typeMismatch && canChangeType) { %>
<div class="alert alert-warning d-elevated mb-4" role="alert">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
        <div class="flex-grow-1">
            <strong><%= t('projects:show.typeRecommendation') %></strong> <%= t('projects:show.typeMismatchInfo') %>
            <br>
            <small>
                <%= t('projects:show.currentType') %>: <strong>
