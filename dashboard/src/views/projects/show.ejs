    // Open collapse from sessionStorage (after form redirect)
    const openCollapse = sessionStorage.getItem('openCollapse');
    if (openCollapse) {
        sessionStorage.removeItem('openCollapse');
        const collapseEl = document.getElementById(openCollapse);
        if (collapseEl) {
            const bsCollapse = new bootstrap.Collapse(collapseEl, { show: true });
